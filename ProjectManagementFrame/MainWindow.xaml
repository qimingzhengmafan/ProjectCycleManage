<Window x:Class="ProjectManagementFrame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManagementFrame"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:Menu="clr-namespace:Page_Navigation_App.Utilities"
        xmlns:uc="clr-namespace:ProjectManagementFrame.View.UserControls"
        xmlns:vm="clr-namespace:ProjectManagementFrame.ViewModel"
        xmlns:slc="clr-namespace:ScrollControlProject;assembly=ScrollControlProject"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainVM}"
        Title="MainWindow" 
        Height="700" 
        Width="1300">
    <Window.DataContext>
        <vm:MainVM/>
    </Window.DataContext>
    <Grid Background="#f5f5f5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48"/>
                <ColumnDefinition Width="147"/>
                <ColumnDefinition Width="147"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid>
                <Border>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="91"/>
                            <RowDefinition/>
                            <!--<RowDefinition Height="59"/>
                            <RowDefinition Height="59"/>
                            <RowDefinition Height="59"/>-->
                        </Grid.RowDefinitions>

                        <Border>
                            <Button Style="{StaticResource RoundedButtonStyle}"
                                    Background="Transparent"
                                    BorderThickness="0.5 0.5 0.5 0">
                                <Button.Content>
                                    <Ellipse Height="30"
                                             Width="30">
                                        <Ellipse.Fill>
                                            <RadialGradientBrush>
                                                <GradientStop Color="#FF0123FF" 
                                                              Offset="1"/>
                                                <GradientStop Color="White" 
                                                              Offset="0"/>
                                            </RadialGradientBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Button.Content>
                            </Button>
                        </Border>

                        <Border Grid.Row="1"
                                BorderThickness="0.5 0 0.5 0.5"
                                BorderBrush="#707070"
                                CornerRadius="0 0 5 0">
                            <StackPanel>

                                <Menu:Btn Style="{StaticResource BtnStyle}"
                                          IsChecked="True"
                                          BorderThickness="1"
                                          BorderBrush="Black">
                                    <Grid>
                                        <Image Source="/Resources/Images/总览1.png" 
                                               Width="25"
                                               Height="25"/>
                                    </Grid>
                                </Menu:Btn>

                                <Menu:Btn Style="{StaticResource BtnStyle}">
                                    <Grid>
                                        <Image Source="/Resources/Images/表格 (1).png" 
                                               Width="25"/>

                                    </Grid>
                                </Menu:Btn>

                                <Menu:Btn Style="{StaticResource BtnStyle}">
                                    <Grid>
                                        <Image Source="/Resources/Images/新增项目_新增新建操作_jurassic.png"
                                               Width="25"/>

                                    </Grid>
                                </Menu:Btn>

                                <Menu:Btn Style="{StaticResource BtnStyle}">
                                    <Grid>
                                        <Image Source="/Resources/Images/修改.png" 
                                               Width="25"/>

                                    </Grid>
                                </Menu:Btn>


                            </StackPanel>
                        </Border>



                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="99"/>
                    <RowDefinition/>
                    <RowDefinition Height="21"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid>
                        <Button Style="{StaticResource HeadPortrait}"
        Click="Button_Click"/>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Button Style="{StaticResource HeadPortrait}"
        Click="Button_Click"/>
                    </Grid>

                    <Grid Grid.Row="2">
                        <Button Style="{StaticResource HeadPortrait}"
        Click="Button_Click"/>
                    </Grid>

                    <Grid Grid.Row="3">
                        <Button Style="{StaticResource HeadPortrait}"
        Click="Button_Click"/>
                    </Grid>

                    <Grid Grid.Row="4">
                        <Button Style="{StaticResource HeadPortrait}"
        Click="Button_Click"/>
                    </Grid>
                </Grid>
            </Grid>

            <Border Grid.Column="2"
                    BorderBrush="#707070"
                    BorderThickness="0 0 1 0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="99"/>
                        <RowDefinition/>
                        <RowDefinition Height="21"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Grid>
                            <Button Style="{StaticResource HeadPortrait}"
                                    Click="Button_Click"/>
                        </Grid>

                        <Grid Grid.Row="1">
                            <Button Style="{StaticResource HeadPortrait}"
                                    Click="Button_Click"/>
                        </Grid>

                        <Grid Grid.Row="2">
                            <Button Style="{StaticResource HeadPortrait}"
                                    Click="Button_Click"/>
                        </Grid>

                        <Grid Grid.Row="3">
                            <Button Style="{StaticResource HeadPortrait}"
                                    Click="Button_Click"/>
                        </Grid>

                        <Grid Grid.Row="4">
                            <Button Style="{StaticResource HeadPortrait}"
                                    Click="Button_Click"/>
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
            

            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <StackPanel>
                            <Label Content="总项目"
                                   Height="40"
                                   FontFamily="幼圆"
                                   HorizontalContentAlignment="Center"
                                   FontSize="25"
                                   Margin="0 5 0 0"
                                   FontWeight="Bold"/>
                            <uc:PieChart Height="300">
                                <uc:PieChart.DataContext>
                                    <vm:AllProjects/>
                                </uc:PieChart.DataContext>
                            </uc:PieChart>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Column="1">
                        <StackPanel>
                            <Label Content="{Binding CurrentYear ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                   Height="40"
                                   FontFamily="幼圆"
                                   HorizontalContentAlignment="Center"
                                   FontSize="25"
                                   Margin="0 5 0 0"
                                   FontWeight="Bold"/>
                            <uc:PieChart Height="300">
                                <uc:PieChart.DataContext>
                                    <vm:AllProjects/>
                                </uc:PieChart.DataContext>
                            </uc:PieChart>
                        </StackPanel>
                    </Grid>
                </Grid>

                <Grid Grid.Row="1">
                    <slc:SeamlessLoopingScroll />
                </Grid>
            </Grid>


        </Grid>
    </Grid>
</Window>
