<UserControl x:Class="ProjectManagementFrame.View.Overview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectManagementFrame.View"
             xmlns:uc="clr-namespace:ProjectManagementFrame.View.UserControls"
             xmlns:vm="clr-namespace:ProjectManagementFrame.ViewModel"
             xmlns:slc="clr-namespace:ScrollControlProject;assembly=ScrollControlProject"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:OverviewVM}"
             d:DesignHeight="700"
             d:DesignWidth="1252">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="147"/>
            <ColumnDefinition Width="147"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="99"/>
                <RowDefinition/>
                <RowDefinition Height="21"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Button Style="{StaticResource HeadPortrait}"
                            Command="{Binding First}"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Button Style="{StaticResource HeadPortrait}"/>
                </Grid>

                <Grid Grid.Row="2">
                    <Button Style="{StaticResource HeadPortrait}"/>
                </Grid>

                <Grid Grid.Row="3">
                    <Button Style="{StaticResource HeadPortrait}"/>
                </Grid>

                <Grid Grid.Row="4">
                    <Button Style="{StaticResource HeadPortrait}"/>
                </Grid>
            </Grid>
        </Grid>

        <Border Grid.Column="1"
                    BorderBrush="#707070"
                    BorderThickness="0 0 1 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="99"/>
                    <RowDefinition/>
                    <RowDefinition Height="21"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid>
                        <Button Style="{StaticResource HeadPortrait}"/>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Button Style="{StaticResource HeadPortrait}"/>
                    </Grid>

                    <Grid Grid.Row="2">
                        <Button Style="{StaticResource HeadPortrait}"/>
                    </Grid>

                    <Grid Grid.Row="3">
                        <Button Style="{StaticResource HeadPortrait}"/>
                    </Grid>

                    <Grid Grid.Row="4">
                        <Button Style="{StaticResource HeadPortrait}"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>


        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid>
                    <StackPanel>
                        <Label Content="总项目"
                                   Height="40"
                                   FontFamily="幼圆"
                                   HorizontalContentAlignment="Center"
                                   FontSize="25"
                                   Margin="0 5 0 0"
                                   FontWeight="Bold"/>
                        <uc:PieChart Height="300"
                                     
                                     DataContext="{Binding AllProjectsInformation ,UpdateSourceTrigger=PropertyChanged}">
                            <!--<uc:PieChart.DataContext>
                                <vm:AllProjects/>
                            </uc:PieChart.DataContext>-->
                        </uc:PieChart>

                    </StackPanel>
                </Grid>

                <Grid Grid.Column="1">
                    <StackPanel>
                        <Label Content="{Binding CurrentYear ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                   Height="40"
                                   FontFamily="幼圆"
                                   HorizontalContentAlignment="Center"
                                   FontSize="25"
                                   Margin="0 5 0 0"
                                   FontWeight="Bold"/>
                        <uc:PieChart Height="300"
                                     DataContext="{Binding ProjectStage,UpdateSourceTrigger=PropertyChanged}">
                        </uc:PieChart>
                    </StackPanel>
                </Grid>
            </Grid>

            <Grid Grid.Row="1">
                <slc:SeamlessLoopingScroll />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
