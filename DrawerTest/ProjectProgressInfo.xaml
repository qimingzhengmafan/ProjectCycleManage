<UserControl x:Class="DrawerTest.ProjectProgressInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DrawerTest"
             mc:Ignorable="d" 
             x:Name="ProjectProgressInfoView"
             d:DesignHeight="450" 
             d:DesignWidth="800">
    <Grid>
        <Canvas x:Name="MainCanvas" 
                Height="20"
                VerticalAlignment="Center">
            <!-- 中间的矩形部分 - 宽度将根据文本调整 -->
            <Rectangle x:Name="MiddleRect" 
                       VerticalAlignment="Center"
                       Height="20"
                       Canvas.Left="20" 
                       Canvas.Top="0"
                       RadiusX="3" RadiusY="3"
                       Fill="{Binding BeltColor, ElementName=ProjectProgressInfoView}"/>

            <!-- 左端圆 -->
            <Ellipse x:Name="LeftCircle"
                     VerticalAlignment="Center"
                     Width="30" 
                     Height="20"
                     Canvas.Left="5" Canvas.Top="0"
                     Fill="{Binding BeltColor, ElementName=ProjectProgressInfoView}"/>

            <!-- 右端圆 - 位置将根据矩形宽度调整 -->
            <Ellipse x:Name="RightCircle"
                     Width="30" Height="20"
                     VerticalAlignment="Center"
                     Canvas.Top="0"
                     Fill="{Binding BeltColor, ElementName=ProjectProgressInfoView}"/>

            <!-- 文本显示区域 - 宽度将根据文本调整 -->
            <Border x:Name="TextBorder"
                    Background="Transparent"
                    Height="10"
                    Canvas.Top="5"
                    VerticalAlignment="Center"
                    Canvas.Left="20">
                <TextBlock x:Name="ContentTextBlock"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           TextAlignment="Center"
                           TextWrapping="NoWrap"
                           FontSize="10"
                           FontWeight="SemiBold"
                           Foreground="{Binding TextColor, ElementName=ProjectProgressInfoView}"
                           Text="{Binding DisplayText, ElementName=ProjectProgressInfoView}"
                           Loaded="ContentTextBlock_Loaded"
                           SizeChanged="ContentTextBlock_SizeChanged"/>
            </Border>
        </Canvas>
    </Grid>
</UserControl>
