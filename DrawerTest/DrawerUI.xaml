                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    
                    <Button Grid.RowSpan="2"
                            Background="Transparent"
                            BorderThickness="0"
                            HorizontalContentAlignment="Left"
                            Command="{Binding ShowICommandCommand}">
                        <Button.Content>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0"
                                      Grid.RowSpan="2">
                                    <TextBlock Text="{Binding Percent}"
                                               FontSize="35"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Margin="600 0 0 0"/>

                                    <TextBlock Text="%"
                                               FontSize="35"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Margin="700 0 0 0"/>
                                    
                                </Grid>
                                <StackPanel Orientation="Horizontal">
