                                               Margin="30 0 0 0"
                                               VerticalAlignment="Center"/>
                                    <Label Content="个"
                                           FontSize="15"
                                           FontWeight="Bold"
                                           Margin="20 0 0 0"
                                           VerticalContentAlignment="Center"/>
                                </StackPanel>
                            </Grid>
