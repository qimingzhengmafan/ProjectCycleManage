<UserControl x:Class="ScrollControlProject.AutoScrollView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScrollControlProject"
             xmlns:converters="clr-namespace:ScrollControlProject.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <!-- 滚动区域 -->
        <Border BorderBrush="Gray" BorderThickness="1" Margin="20" ClipToBounds="True">
            <ListBox x:Name="scrollList" 
                     ItemsSource="{Binding Items}"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Hidden">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid Height="60" Background="{Binding Background}">
                            <TextBlock Text="{Binding Content}" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Center"
                                       FontSize="16" FontWeight="Medium"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- 控制按钮 -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="20">
            <Button Content="开始" Click="StartScroll_Click" Margin="5" Width="70"/>
            <Button Content="暂停" Click="StopScroll_Click" Margin="5" Width="70"/>
            <Slider x:Name="speedSlider" Minimum="1" Maximum="20" Value="10" Width="200" Margin="5"/>
            <TextBlock Text="速度" VerticalAlignment="Center"/>
        </StackPanel>
    </Grid>


</UserControl>
