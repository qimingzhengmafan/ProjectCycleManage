<Window x:Class="ProjectManagementSoftwareFrame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManagementSoftwareFrame"
        mc:Ignorable="d"
        Title="MainWindow" 
        x:Name="mainwindowdata"
        Height="700"
        Width="1300"
        Loaded="Window_Loaded">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button Margin="30 10 30 10"
                        Content="连接数据库"
                        Click="Connect_Click"/>

                <Button Margin="30 10 30 10"
                        Grid.Column="1"
                        Content="断开数据库"
                        Click="DisConnect_Click"/>

                <Button Grid.Column="0"
                        Grid.Row="1"
                        Margin="30 10 30 10"
                        Content="查询所有"
                        Click="SelectAll_Click"/>

                <Button Grid.Column="2"
                        Margin="30 10 30 10"
                        Grid.Row="0"
                        Content="查询2022"
                        Click="Select2022"/>

                <Button Grid.Column="1"
                        Grid.Row="1"
                        Margin="30 10 30 10"
                        Content="导入数据"
                        Click="test"/>

                <Button Grid.Column="2"
                        Grid.Row="1"
                        Margin="30 10 30 10"
                        Content="董工"
                        Click="SelectDong"/>

                <TextBlock Grid.Row="2"
                           Margin="30 10 30 10"
                           Grid.Column="0"
                           Grid.ColumnSpan="5"/>
            </Grid>



            <Grid Grid.Row="1">
                <DataGrid x:Name="dataGrid"
                          ItemsSource = "{Binding Projectdata,ElementName=mainwindowdata,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="name" Width="100" Binding="{Binding ProjectSorted,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"/>
                        <DataGridTextColumn Header="departemt" Width="100" Binding="{Binding ProjectYear}"/>
                        <DataGridTextColumn Header="age" Width="100" Binding="{Binding ProjectName}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Grid>
    </Grid>
</Window>
