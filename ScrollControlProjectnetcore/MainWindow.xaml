<Window x:Class="ScrollControlProjectnetcore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScrollControlProjectnetcore"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="20">
        <!--<local:SeamlessLoopingScroll x:Name="scrollControl"
                                 Width="600"
                              Height="300"
                              IsAutoScrollEnabled="True"/>-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <local:SeamlessLoopingScroll x:Name="scrollControl"
                                 Width="900"
                                 Height="300"
                                 IsAutoScrollEnabled="True"/>

        <Grid Grid.Column="1">
            <TreeView x:Name="FolderTreeView" ItemsSource="{Binding RootFolders}">
                <TreeView.ItemContainerStyle>
                    <Style TargetType="{x:Type TreeViewItem}">
                        <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                        <Setter Property="FontSize" Value="12"/>
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>
        </Grid>

    </Grid>
</Window>
