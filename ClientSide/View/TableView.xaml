<UserControl x:Class="ClientSide.View.TableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ClientSide.View"
             xmlns:local1="clr-namespace:ProjectManagement.View;assembly=ProjectManagement"
             xmlns:viewmodel="clr-namespace:ClientSide.ViewModel"
             xmlns:viewmodel1="clr-namespace:ProjectManagement.ViewModel;assembly=ProjectManagement"
             xmlns:slc="clr-namespace:ScrollControlProjectnetcore;assembly=ScrollControlProjectnetcore"
             xmlns:draw="clr-namespace:DrawerTest;assembly=DrawerTest" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=viewmodel:TablePVM}"
             d:DesignHeight="700" 
             d:DesignWidth="1252">
    <!-- <UserControl.DataContext> -->
    <!--     <viewmodel:TableVM/> -->
    <!-- </UserControl.DataContext> -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="233"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid>
            <TreeView ItemsSource="{Binding TreeViewModel.TreeModel1.LevelTwo}"
                      FontSize="20"
                      BorderThickness=" 0 0 0.5 0"
                      FontFamily="Microsoft YaHei" 
                      FontWeight="Bold" >
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="Margin" 
                                Value="0,15,0,5"/>
                        <!-- 上下间距2，左右间距0 -->
                    </Style>
                </TreeView.ItemContainerStyle>
                
                
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding LevelTwo}">
                        <StackPanel>
                            <TextBlock Text="{Binding LevelOne}"/>
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="MouseLeftButtonUp">
                                    <i:InvokeCommandAction Command="{Binding DataContext.TreeViewModel.NodeClickCommand, RelativeSource={RelativeSource AncestorType=TreeView}}"
                                                           CommandParameter="{Binding}" />
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </StackPanel>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>

            </TreeView>
        </Grid>
 
        <Grid Grid.Column="1">
            <!--<ScrollViewer>
                <draw:DrawerUI>

                </draw:DrawerUI>
            </ScrollViewer>-->
            <ScrollViewer DataContext="{Binding DetailedInformationvm}">

                <ItemsControl ItemsSource="{Binding DataCollection}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <draw:DrawerUI/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
        </Grid>

        <Grid Grid.Column="1"
              Width="{Binding Showwidth}"
              HorizontalAlignment="Right"
              Background="White">
            <ScrollViewer>
                <local1:ProjectDetails DataContext="{Binding Projectdetailsvm}"/>
            </ScrollViewer>
        </Grid>
        
        
    </Grid>
</UserControl>
