<Window x:Class="ProjectCycleManage.View.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectCycleManage.View"
        xmlns:model="clr-namespace:ProjectCycleManage.Model"
        xmlns:vm="clr-namespace:ProjectCycleManage.ViewModel"
        mc:Ignorable="d"
        Title="LogInWindow" 
        Height="740"
        Width="1200">
    <Window.DataContext>
        <vm:LoginVM/>
    </Window.DataContext>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                <GradientStop Color="#FF1A3A8F" Offset="0"/>
                <GradientStop Color="#FF2D5BD5" Offset="0.534"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Width="320"
                Height="450"
                Background="White"
                CornerRadius="15"
                Margin="0 -50 0 0">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                          Direction="10" 
                          ShadowDepth="10" 
                          Opacity="0.3" 
                          BlurRadius="10"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="31"/>
                    <RowDefinition Height="62"/>
                    <RowDefinition Height="144"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom">
                        <Border Height="45"
                                Width="45"
                                CornerRadius="5">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                                    <GradientStop Color="#FF1A3A8F" Offset="0"/>
                                    <GradientStop Color="#FF2D5BD5" Offset="0.534"/>
                                </LinearGradientBrush>
                            </Border.Background>
                                <Image Source="/Resources/Images/项目管理.png" 
                                       Height="34"
                                       Width="34"/>

                        </Border>
                        <Label Content="项目全周期管理"
                               FontSize="22"
                               FontWeight="Bold"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Foreground="#2D5BD6"/>
                    </StackPanel>
                </Grid>

                <Grid Grid.Row="1">
                    <Label Content="项目全生命周期管理系统"
                           FontSize="12"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           Foreground="#666666"/>
                </Grid>

                <Label Grid.Row="2"
                       Content="用户登录"
                       HorizontalContentAlignment="Center"
                       VerticalContentAlignment="Center"
                       Foreground="#2D5BD6"
                       FontSize="22"
                       FontWeight="Bold"/>

                <Grid Grid.Row="3"
                      Margin="38 0 38 0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    Margin="0 0 0 10">
                            <Image Source="/Resources/Images/登录.png"
                                   Width="17"
                                   Height="17"
                                   Margin="0 0 10 0"/>

                            <TextBlock Text="用户名"
                                       FontSize="12"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <Border Height="30"
                                        CornerRadius="5 0 0 5"
                                        Width="30"
                                        BorderThickness="1 1 0 1"
                                        BorderBrush="#abadb3"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <Image Source="/Resources/Images/登录.png"
                                           Width="17"
                                           Height="17"
                                           Margin="0 0 0 0"/>

                                </Border>
                                <TextBox Height="30"
                                         Width="185"
                                         Text="{Binding Username}"
                                         model:TextBoxBehavior.ClearTextOnClick="True"
                                         Foreground="Black"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         BorderThickness="0 1 0 1"/>
                                <Border Height="30"
                                        Width="29"
                                        CornerRadius="0 5 5 0"
                                        BorderThickness="0 1 1 1"
                                        BorderBrush="#abadb3"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    
                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                    <StackPanel Grid.Row="1"
                                VerticalAlignment="Bottom"
                                Margin="0 0 0 5">
                        <StackPanel Orientation="Horizontal"
                                    Margin="0 0 0 10">
                            <Image Source="/Resources/Images/锁定.png"
                                   Width="17"
                                   Height="17"
                                   Margin="0 0 10 0"/>

                            <TextBlock Text="密码"
                                       FontSize="12"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <Border Height="30"
                                        CornerRadius="5 0 0 5"
                                        Width="30"
                                        BorderThickness="1 1 0 1"
                                        BorderBrush="#abadb3"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                    <Image Source="/Resources/Images/锁定.png"
                                           Width="17"
                                           Height="17"
                                           Margin="0 0 0 0"/>

                                </Border>
                                <PasswordBox model:PasswordBoxHelper.Attach="True"
                                             model:PasswordBoxHelper.Password="{Binding Userpassword,Mode=TwoWay}"
                                             Height="30"
                                             PasswordChar="●"
                                             Width="185"
                                             Foreground="Black"
                                             FontSize="14"
                                             VerticalContentAlignment="Center"
                                             BorderThickness="0 1 0 1"/>
                                <Border Height="30"
                                        Width="29"
                                        CornerRadius="0 5 5 0"
                                        BorderThickness="0 1 1 1"
                                        BorderBrush="#abadb3"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">

                                </Border>
                            </StackPanel>
                        </Grid>
                    </StackPanel>

                </Grid>

                <Grid Grid.Row="4">
                    <Button Width="245"
                            Height="39"
                            BorderThickness="0"
                            Background="#2D5BD6"
                            Command="{Binding LoginCommand}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Image Source="/Resources/Images/退出登录.png"
                                       Height="23"
                                       Width="23"
                                       Margin="0 0 5 0"/>
                                <TextBlock Text="登录"
                                           FontSize="14"
                                           VerticalAlignment="Center"
                                           Foreground="White"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
