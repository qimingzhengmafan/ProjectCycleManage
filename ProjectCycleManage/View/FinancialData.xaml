<UserControl x:Class="ProjectCycleManage.View.FinancialData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectCycleManage.View"
             xmlns:vm="clr-namespace:ProjectCycleManage.ViewModel"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:FinancialData}"
             d:DesignHeight="800" 
             d:DesignWidth="1664">
    <UserControl.Resources>
        <!-- 年份标签样式 -->
        <Style x:Key="YearTabStyle" TargetType="RadioButton">
            <Setter Property="Width" Value="96"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2D5BD5"/>
                                <Setter TargetName="border" Property="Background" Value="#E8EDFF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F7FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 数据卡片样式 -->
        <Style x:Key="DataCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#2D5BD5"/>
            <Setter Property="BorderThickness" Value="0,0,0,4"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" 
                                      ShadowDepth="2" 
                                      Opacity="0.05"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 按钮样式 -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2D5BD5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1A3A8F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F5F7FA"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 图标按钮样式 -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#f0f0f0"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#e0e0e0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 表单输入框样式 -->
        <Style x:Key="FormInputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Padding="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2D5BD5"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2D5BD5"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="#F5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0"
                Background="White"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/数据分析.png" 
                           Height="25"/>
                    <TextBlock Text=" 销售额与年度预算管理"
                               VerticalAlignment="Center"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#2D5BD5"/>
                </StackPanel>
                
                <!-- 返回按钮 -->
                <Button Grid.Column="1"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding BackToSettingsCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="←" 
                                   FontSize="16" 
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="返回系统设置" 
                                   FontSize="16"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- 年份选择器 -->
        <Border Grid.Row="2"
                Background="White"
                Margin="20,10,20,0"
                Padding="20,15">
            <StackPanel>
                <StackPanel Orientation="Horizontal" 
                            Margin="0,0,0,15">
                    <TextBlock Text="📊" 
                               FontSize="20" 
                               Margin="0,0,10,0"/>
                    <TextBlock Text="销售额与年度预算管理"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#2D5BD5"/>
                </StackPanel>
                
                <WrapPanel Orientation="Horizontal" 
                            Margin="0,10,0,0">
                    <RadioButton Content="2022年" 
                                 Style="{StaticResource YearTabStyle}"
                                 GroupName="YearTabs"
                                 Command="{Binding SelectYearCommand}" CommandParameter="2022"
                                 Margin="0,0,10,10"/>
                    <RadioButton Content="2023年" 
                                 Style="{StaticResource YearTabStyle}"
                                 GroupName="YearTabs"
                                 Command="{Binding SelectYearCommand}" CommandParameter="2023"
                                 Margin="0,0,10,10"/>
                    <RadioButton Content="2024年" 
                                 Style="{StaticResource YearTabStyle}"
                                 GroupName="YearTabs"
                                 Command="{Binding SelectYearCommand}" CommandParameter="2024"
                                 IsChecked="True"
                                 Margin="0,0,10,10"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- 预算数据区域 -->
        <Border Grid.Row="3"
                Background="White"
                Margin="20,10,20,10"
                CornerRadius="12"
                Padding="25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 预算头部 -->
                <Border Grid.Row="0"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,0,0,1"
                        Padding="0,0,0,15"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                   Text="2024年预算数据"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#2D5BD5"/>
                        
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="0,0,10,0"
                                    Command="{Binding ExportDataCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📥" 
                                               Margin="0,0,5,0"/>
                                    <TextBlock Text="导出数据"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding EditBudgetCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✏️" 
                                               Margin="0,0,5,0"/>
                                    <TextBlock Text="编辑预算"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- 数据展示卡片 -->
                <Grid Grid.Row="1"
                      Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0"
                            Style="{StaticResource DataCardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,0,0,15">
                                <TextBlock Text="💰" 
                                           FontSize="16" 
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="年度销售预测"
                                           FontWeight="Bold"
                                           Foreground="#2D5BD5"/>
                            </StackPanel>
                            <TextBlock Text="{Binding TotalBudget, StringFormat='¥ {0:N0}'}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="年初设定预算总额"
                                       FontSize="14"
                                       Foreground="#666666"/>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,10,0,0">


                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- 已使用预算卡片 -->
                    <Border Grid.Column="2"
                            Style="{StaticResource DataCardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,0,0,15">
                                <TextBlock Text="📊" 
                                           FontSize="16" 
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="已使用预算"
                                           FontWeight="Bold"
                                           Foreground="#2D5BD5"/>
                            </StackPanel>
                            <TextBlock Text="{Binding UsedBudget, StringFormat='¥ {0:N0}'}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="当前已使用预算"
                                       FontSize="14"
                                       Foreground="#666666"/>

                        </StackPanel>
                    </Border>
                    
                    <!-- 预算执行率卡片 -->
                    <Border Grid.Column="4"
                            Style="{StaticResource DataCardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,0,0,15">
                                <TextBlock Text="📈" 
                                           FontSize="16" 
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="预算执行率"
                                           FontWeight="Bold"
                                           Foreground="#2D5BD5"/>
                            </StackPanel>
                            <TextBlock Text="{Binding BudgetExecutionRate}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="预算使用比率"
                                       FontSize="14"
                                       Foreground="#666666"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- 投入资产设置区域 -->
                <Border Grid.Row="2"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,0,0,1"
                        Padding="0,0,0,20"
                        Margin="0,20,0,20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 投入资产设置头部 -->
                        <Grid Grid.Row="0"
                              Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0"
                                        Orientation="Horizontal">
                                <TextBlock Text="📊" 
                                           FontSize="16" 
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="投入资产设置"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="#2D5BD5"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1"
                                        Orientation="Horizontal"
                                        HorizontalAlignment="Right">
                                <Button Style="{StaticResource SecondaryButtonStyle}"
                                        Margin="0,0,10,0"
                                        Command="{Binding ResetInvestmentCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🔄" 
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="重置数据"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource PrimaryButtonStyle}"
                                        Command="{Binding SaveInvestmentCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="💾" 
                                                   Margin="0,0,5,0"/>
                                        <TextBlock Text="保存设置"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Grid>
                        
                        <!-- 年度投入资产设置 -->
                        <Border Grid.Row="1"
                                Background="#F9F9F9"
                                CornerRadius="8"
                                Padding="15"
                                Margin="0,0,0,15">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal"
                                            Margin="0,0,0,10">
                                    <TextBlock Text="📅" 
                                               FontSize="14" 
                                               Margin="0,0,8,0"/>
                                    <TextBlock Text="年度投入资产设置 - "
                                               FontWeight="Bold"
                                               Foreground="#2D5BD5"/>
                                    <TextBlock Text="{Binding CurrentYear}"
                                               FontWeight="Bold"
                                               Foreground="#2D5BD5"/>
                                    <TextBlock Text="年"
                                               FontWeight="Bold"
                                               Foreground="#2D5BD5"/>
                                </StackPanel>
                                
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- 投入资产数量 -->
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="投入资产数量"
                                                   FontWeight="Medium"
                                                   Foreground="#666666"
                                                   Margin="0,0,0,5"/>
                                        <TextBox Text="{Binding InvestmentQuantity}"
                                                 Style="{StaticResource FormInputStyle}"
                                                 Width="120"/>
                                    </StackPanel>
                                    
                                    <!-- 年度销售预测 -->
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="年度销售预测"
                                                   FontWeight="Medium"
                                                   Foreground="#666666"
                                                   Margin="0,0,0,5"/>
                                        <TextBox Text="{Binding SalesForecast, StringFormat='¥ {0:N0}'}"
                                                 Style="{StaticResource FormInputStyle}"
                                                 Width="150"/>
                                    </StackPanel>
                                    
                                    <!-- 年度预算 -->
                                    <StackPanel Grid.Column="4">
                                        <TextBlock Text="年度预算"
                                                   FontWeight="Medium"
                                                   Foreground="#666666"
                                                   Margin="0,0,0,5"/>
                                        <TextBox Text="{Binding InvestmentBudget, StringFormat='¥ {0:N0}'}"
                                                 Style="{StaticResource FormInputStyle}"
                                                 Width="150"/>
                                    </StackPanel>
                                    
                                    <!-- 操作按钮 -->
                                    <StackPanel Grid.Column="5"
                                                Orientation="Horizontal"
                                                VerticalAlignment="Bottom"
                                                Margin="10,0,0,0">
                                        <Button Style="{StaticResource IconButtonStyle}"
                                                Command="{Binding EditInvestmentCommand}">
                                            <TextBlock Text="✏️"/>
                                        </Button>
                                        <Button Style="{StaticResource IconButtonStyle}"
                                                Command="{Binding DeleteInvestmentCommand}"
                                                Visibility="Collapsed">
                                            <TextBlock Text="🗑️"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- 月度数据详情 -->
                        <Border Grid.Row="2"
                                Background="#F5F7FA"
                                CornerRadius="8"
                                Padding="15">
                            <StackPanel>
                                <Button Style="{StaticResource SecondaryButtonStyle}"
                                        Background="Transparent"
                                        BorderThickness="0"
                                        Command="{Binding ToggleMonthlyDataCommand}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding MonthlyDataToggleIcon}" 
                                                   Margin="0,0,8,0"/>
                                        <TextBlock Text="月度数据详情"/>
                                    </StackPanel>
                                </Button>
                                
                                <DataGrid Grid.Row="1"
                                          ItemsSource="{Binding MonthlyDataList}"
                                          AutoGenerateColumns="False"
                                          IsReadOnly="True"
                                          HeadersVisibility="Column"
                                          BorderBrush="#E0E0E0"
                                          BorderThickness="1"
                                          Visibility="{Binding MonthlyDataVisibility}"
                                          Margin="0,10,0,0">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="月份"
                                                            Binding="{Binding Month}"
                                                            Width="*"/>
                                        <DataGridTextColumn Header="投入资产数量"
                                                            Binding="{Binding Quantity}"
                                                            Width="*"/>
                                        <DataGridTextColumn Header="月度销售预测"
                                                            Binding="{Binding SalesForecast, StringFormat='¥ {0:N0}'}"
                                                            Width="*"/>
                                        <DataGridTextColumn Header="月度预算"
                                                            Binding="{Binding Budget, StringFormat='¥ {0:N0}'}"
                                                            Width="*"/>
                                        <DataGridTemplateColumn Header="操作"
                                                              Width="*">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <Button Style="{StaticResource IconButtonStyle}"
                                                                Command="{Binding DataContext.EditMonthlyDataCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                CommandParameter="{Binding}">
                                                            <TextBlock Text="✏️"/>
                                                        </Button>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- 投入资产统计信息 -->
        <!--<Border Grid.Row="4"
                Background="White"
                Margin="20,0,20,20"
                CornerRadius="12"
                Padding="25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                --><!-- 统计信息头部 --><!--
                <Grid Grid.Row="0"
                      Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal">
                        <TextBlock Text="📈" 
                                   FontSize="18" 
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="投入资产统计"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#2D5BD5"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding ExportStatisticsCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" 
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="导出统计"/>
                        </StackPanel>
                    </Button>
                </Grid>
                
                --><!-- 统计信息网格 --><!--
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    --><!-- 总投入资产数量 --><!--
                    <Border Grid.Column="0"
                            Background="#F0F7FF"
                            CornerRadius="8"
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="总投入资产数量"
                                       FontWeight="Medium"
                                       Foreground="#2D5BD5"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding TotalInvestmentQuantity}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                            <TextBlock Text="台"
                                       FontWeight="Medium"
                                       Foreground="#666666"/>
                        </StackPanel>
                    </Border>
                    
                    --><!-- 年度销售预测总额 --><!--
                    <Border Grid.Column="2"
                            Background="#F0F7FF"
                            CornerRadius="8"
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="年度销售预测总额"
                                       FontWeight="Medium"
                                       Foreground="#2D5BD5"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding TotalSalesForecast, StringFormat='¥ {0:N0}'}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                            <TextBlock Text="元"
                                       FontWeight="Medium"
                                       Foreground="#666666"/>
                        </StackPanel>
                    </Border>
                    
                    --><!-- 年度预算总额 --><!--
                    <Border Grid.Column="4"
                            Background="#F0F7FF"
                            CornerRadius="8"
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="年度预算总额"
                                       FontWeight="Medium"
                                       Foreground="#2D5BD5"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding TotalInvestmentBudget, StringFormat='¥ {0:N0}'}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                            <TextBlock Text="元"
                                       FontWeight="Medium"
                                       Foreground="#666666"/>
                        </StackPanel>
                    </Border>
                    
                    --><!-- 投入资产状态 --><!--
                    <Border Grid.Column="6"
                            Background="#F0F7FF"
                            CornerRadius="8"
                            Padding="15">
