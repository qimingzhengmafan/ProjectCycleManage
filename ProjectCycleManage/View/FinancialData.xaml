<UserControl x:Class="ProjectCycleManage.View.FinancialData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectCycleManage.View"
             xmlns:vm="clr-namespace:ProjectCycleManage.ViewModel"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:FinancialData}"
             d:DesignHeight="800" 
             d:DesignWidth="1664">
    <UserControl.Resources>
        <!-- 年份标签样式 -->
        <Style x:Key="YearTabStyle" TargetType="RadioButton">
            <Setter Property="Width" Value="96"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2D5BD5"/>
                                <Setter TargetName="border" Property="Background" Value="#E8EDFF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F5F7FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 数据卡片样式 -->
        <Style x:Key="DataCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#2D5BD5"/>
            <Setter Property="BorderThickness" Value="0,0,0,4"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" 
                                      ShadowDepth="2" 
                                      Opacity="0.05"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 按钮样式 -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2D5BD5"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1A3A8F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F5F7FA"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 图标按钮样式 -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#f0f0f0"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#e0e0e0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 表单输入框样式 -->
        <Style x:Key="FormInputStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Padding="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2D5BD5"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="#2D5BD5"/>
                                <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="#F5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0"
                Background="White"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/数据分析.png" 
                           Height="25"/>
                    <TextBlock Text=" 销售额与年度预算管理"
                               VerticalAlignment="Center"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#2D5BD5"/>
                </StackPanel>
                
                <!-- 返回按钮 -->
                <Button Grid.Column="1"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding BackToSettingsCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="←" 
                                   FontSize="16" 
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="返回系统设置" 
                                   FontSize="16"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- 年份选择器 -->
        <Border Grid.Row="2"
                Background="White"
                Margin="20,10,20,0"
                Padding="20,15">
            <StackPanel>
                <StackPanel Orientation="Horizontal" 
                            Margin="0,0,0,15">
                    <TextBlock Text="📊" 
                               FontSize="20" 
                               Margin="0,0,10,0"/>
                    <TextBlock Text="销售额与年度预算管理"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#2D5BD5"/>
                </StackPanel>
                
                <WrapPanel Orientation="Horizontal" 
                            Margin="0,10,0,0">
                    <RadioButton Content="2022年" 
                                 Style="{StaticResource YearTabStyle}"
                                 GroupName="YearTabs"
                                 Command="{Binding SelectYearCommand}" CommandParameter="2022"
                                 Margin="0,0,10,10"/>
                    <RadioButton Content="2023年" 
                                 Style="{StaticResource YearTabStyle}"
                                 GroupName="YearTabs"
                                 Command="{Binding SelectYearCommand}" CommandParameter="2023"
                                 Margin="0,0,10,10"/>
                    <RadioButton Content="2024年" 
                                 Style="{StaticResource YearTabStyle}"
                                 GroupName="YearTabs"
                                 Command="{Binding SelectYearCommand}" CommandParameter="2024"
                                 IsChecked="True"
                                 Margin="0,0,10,10"/>
                </WrapPanel>
            </StackPanel>
        </Border>

        <!-- 预算数据区域 -->
        <Border Grid.Row="3"
                Background="White"
                Margin="20,10,20,10"
                CornerRadius="12"
                Padding="25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- 预算头部 -->
                <Border Grid.Row="0"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,0,0,1"
                        Padding="0,0,0,15"
                        Margin="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0"
                                   Text="2024年预算数据"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#2D5BD5"/>
                        
                        <StackPanel Grid.Column="1"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Right">
                            <Button Style="{StaticResource SecondaryButtonStyle}"
                                    Margin="0,0,10,0"
                                    Command="{Binding ExportDataCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📥" 
                                               Margin="0,0,5,0"/>
                                    <TextBlock Text="导出数据"/>
                                </StackPanel>
                            </Button>
                            <Button Style="{StaticResource PrimaryButtonStyle}"
                                    Command="{Binding EditBudgetCommand}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="✏️" 
                                               Margin="0,0,5,0"/>
                                    <TextBlock Text="编辑预算"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- 数据展示卡片 -->
                <Grid Grid.Row="1"
                      Margin="0,0,0,30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Border Grid.Column="0"
                            Style="{StaticResource DataCardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,0,0,15">
                                <TextBlock Text="💰" 
                                           FontSize="16" 
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="年度销售预测"
                                           FontWeight="Bold"
                                           Foreground="#2D5BD5"/>
                            </StackPanel>
                            <TextBlock Text="{Binding TotalBudget, StringFormat='¥ {0:N0}'}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="年初设定预算总额"
                                       FontSize="14"
                                       Foreground="#666666"/>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,10,0,0">


                            </StackPanel>
                        </StackPanel>
                    </Border>
                    
                    <!-- 已使用预算卡片 -->
                    <Border Grid.Column="2"
                            Style="{StaticResource DataCardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,0,0,15">
                                <TextBlock Text="📊" 
                                           FontSize="16" 
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="已使用预算"
                                           FontWeight="Bold"
                                           Foreground="#2D5BD5"/>
                            </StackPanel>
                            <TextBlock Text="{Binding UsedBudget, StringFormat='¥ {0:N0}'}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="当前已使用预算"
                                       FontSize="14"
                                       Foreground="#666666"/>

                        </StackPanel>
                    </Border>
                    
                    <!-- 预算执行率卡片 -->
                    <Border Grid.Column="4"
                            Style="{StaticResource DataCardStyle}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        Margin="0,0,0,15">
                                <TextBlock Text="📈" 
                                           FontSize="16" 
                                           Margin="0,0,8,0"/>
                                <TextBlock Text="预算执行率"
                                           FontWeight="Bold"
                                           Foreground="#2D5BD5"/>
                            </StackPanel>
                            <TextBlock Text="{Binding BudgetExecutionRate}"
                                       FontSize="24"
                                       FontWeight="Bold"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="预算使用比率"
                                       FontSize="14"
                                       Foreground="#666666"/>
                        </StackPanel>
                    </Border>
                </Grid>
                
                <!-- 投入资产设置区域 -->
                <Border Grid.Row="2"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,0,0,1"
                        Padding="0,0,0,20"
                        Margin="0,20,0,20">
                    <Grid Background="{StaticResource BackgroundBrush}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 标题栏 -->
                        <Border Grid.Row="0" Background="{StaticResource CardBackgroundBrush}" 
                Padding="20,15" Margin="0,0,0,10" 
                BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderBrush}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Path Data="M10,20L20,10L30,20" Stroke="{StaticResource PrimaryBrush}" StrokeThickness="2" 
                          Width="20" Height="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="投入资产设置" Style="{StaticResource SectionTitleStyle}" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="重置数据" Style="{StaticResource SecondaryButtonStyle}">
                                        <Button.ToolTip>
                                            <ToolTip Content="重置所有投入资产数据"/>
                                        </Button.ToolTip>
                                    </Button>
                                    <Button Content="保存设置" Style="{StaticResource PrimaryButtonStyle}">
                                        <Button.ToolTip>
                                            <ToolTip Content="保存投入资产设置"/>
                                        </Button.ToolTip>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- 内容区域 -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="20,0">
                                <!-- 年度投入资产设置 -->
                                <Border Background="{StaticResource CardBackgroundBrush}" 
                        CornerRadius="4" Padding="20" Margin="0,0,0,15"
                        BorderThickness="1" BorderBrush="{StaticResource BorderBrush}">
                                    <StackPanel>
                                        <TextBlock Style="{StaticResource DataCardTitleStyle}">
                            <Run Text="年度投入资产设置 - "/>
                            <Run x:Name="InvestmentYearTitle" Text="2024年"/>
                                        </TextBlock>

                                        <!-- 年度数据表格 -->
                                        <Grid Margin="0,10,0,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- 表头 -->
                                            <Border Grid.Row="0" Background="{StaticResource BackgroundBrush}" 
                                    BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderBrush}"
                                    Padding="12,10">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="100"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="投入资产数量" Style="{StaticResource TableHeaderStyle}"/>
                                                    <TextBlock Grid.Column="1" Text="年度销售预测" Style="{StaticResource TableHeaderStyle}"/>
                                                    <TextBlock Grid.Column="2" Text="年度预算" Style="{StaticResource TableHeaderStyle}"/>
                                                    <TextBlock Grid.Column="3" Text="操作" Style="{StaticResource TableHeaderStyle}"/>
                                                </Grid>
                                            </Border>

                                            <!-- 表格数据 -->
                                            <Border Grid.Row="1" Padding="12,10" BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderBrush}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="100"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBox Grid.Column="0" Text="156" Style="{StaticResource FormInputStyle}" 
                                             VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                                    <TextBox Grid.Column="1" Text="9560000" Style="{StaticResource FormInputStyle}" 
                                             VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                                    <TextBox Grid.Column="2" Text="8450000" Style="{StaticResource FormInputStyle}" 
                                             VerticalAlignment="Center" HorizontalAlignment="Stretch"/>

                                                    <StackPanel Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Left">
                                                        <Button Style="{StaticResource SecondaryButtonStyle}" Padding="6,4" 
                                                ToolTip="编辑">
                                                            <Path Data="M3,17.25V21H6.75L17.81,9.94L14.06,6.19L3,17.25ZM20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.13,5.12L18.88,8.87L20.71,7.04Z" 
                                                Fill="{StaticResource SecondaryTextBrush}" Stretch="Uniform" Width="16" Height="16"/>
                                                        </Button>
                                                        <Button Style="{StaticResource SecondaryButtonStyle}" Padding="6,4" 
                                                ToolTip="删除" Margin="5,0,0,0">
                                                            <Path Data="M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19M8,9H16V19H8V9M15.5,4L14.5,3H9.5L8.5,4H5V6H19V4H15.5Z" 
                                                Fill="{StaticResource NegativeBrush}" Stretch="Uniform" Width="16" Height="16"/>
                                                        </Button>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </Grid>

                                        <!-- 月度数据详情 -->
                                        <Border Background="{StaticResource BackgroundBrush}" CornerRadius="4" 
                                Padding="15" Margin="0,15,0,0">
                                            <StackPanel>
                                                <!-- 切换按钮 -->
                                                <Button x:Name="MonthlyToggleButton" Background="Transparent" BorderThickness="0" 
                                        HorizontalAlignment="Left" Padding="0" Cursor="Hand">
                                                    <StackPanel Orientation="Horizontal">
                                                        <Path x:Name="MonthlyToggleIcon" Data="M8.59,16.58L13.17,12L8.59,7.41L10,6L16,12L10,18L8.59,16.58Z" 
                                              Fill="{StaticResource PrimaryBrush}" Stretch="Uniform" Width="16" Height="16" 
                                              RenderTransformOrigin="0.5,0.5">
                                                            <Path.RenderTransform>
                                                                <RotateTransform Angle="0"/>
                                                            </Path.RenderTransform>
                                                        </Path>
                                                        <TextBlock Text="月度数据详情" Margin="8,0,0,0" 
                                                   Foreground="{StaticResource PrimaryBrush}" 
                                                   FontWeight="SemiBold" VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </Button>

                                                <!-- 月度数据表格 -->
                                                <Grid x:Name="MonthlyDataGrid" Margin="0,10,0,0" Visibility="Collapsed">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>

                                                    <!-- 月度表头 -->
                                                    <Border Grid.Row="0" Background="{StaticResource BackgroundBrush}" 
                                            BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderBrush}"
                                            Padding="12,10">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="100"/>
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0" Text="月份" Style="{StaticResource TableHeaderStyle}"/>
                                                            <TextBlock Grid.Column="1" Text="投入资产数量" Style="{StaticResource TableHeaderStyle}"/>
                                                            <TextBlock Grid.Column="2" Text="月度销售预测" Style="{StaticResource TableHeaderStyle}"/>
                                                            <TextBlock Grid.Column="3" Text="月度预算" Style="{StaticResource TableHeaderStyle}"/>
                                                            <TextBlock Grid.Column="4" Text="操作" Style="{StaticResource TableHeaderStyle}"/>
                                                        </Grid>
                                                    </Border>

                                                    <!-- 月度数据 -->
                                                    <ItemsControl Grid.Row="1" x:Name="MonthlyDataItems">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Padding="12,10" BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderBrush}">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="100"/>
                                                                        </Grid.ColumnDefinitions>

                                                                        <TextBlock Grid.Column="0" Text="{Binding Month}" 
                                                                   VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                                                        <TextBox Grid.Column="1" Text="{Binding Quantity}" 
                                                                 Style="{StaticResource FormInputStyle}" 
                                                                 VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                                                        <TextBox Grid.Column="2" Text="{Binding SalesForecast}" 
                                                                 Style="{StaticResource FormInputStyle}" 
                                                                 VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                                                        <TextBox Grid.Column="3" Text="{Binding Budget}" 
                                                                 Style="{StaticResource FormInputStyle}" 
                                                                 VerticalAlignment="Center" HorizontalAlignment="Stretch"/>

                                                                        <StackPanel Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Left">
                                                                            <Button Style="{StaticResource SecondaryButtonStyle}" Padding="6,4" 
                                                                    ToolTip="编辑">
                                                                                <Path Data="M3,17.25V21H6.75L17.81,9.94L14.06,6.19L3,17.25ZM20.71,7.04C21.1,6.65 21.1,6 20.71,5.63L18.37,3.29C18,2.9 17.35,2.9 16.96,3.29L15.13,5.12L18.88,8.87L20.71,7.04Z" 
                                                                      Fill="{StaticResource SecondaryTextBrush}" Stretch="Uniform" Width="16" Height="16"/>
                                                                            </Button>
                                                                            <Button Style="{StaticResource SecondaryButtonStyle}" Padding="6,4" 
                                                                    ToolTip="删除" Margin="5,0,0,0">
                                                                                <Path Data="M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19M8,9H16V19H8V9M15.5,4L14.5,3H9.5L8.5,4H5V6H19V4H15.5Z" 
                                                                      Fill="{StaticResource NegativeBrush}" Stretch="Uniform" Width="16" Height="16"/>
                                                                            </Button>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- 投入资产统计信息 -->
        <!--<Border Grid.Row="4"
                Background="White"
                Margin="20,0,20,20"
                CornerRadius="12"
                Padding="25">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                --><!-- 统计信息头部 --><!--
                <Grid Grid.Row="0"
                      Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0"
                                Orientation="Horizontal">
                        <TextBlock Text="📈" 
                                   FontSize="18" 
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="投入资产统计"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="#2D5BD5"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1"
                            Style="{StaticResource SecondaryButtonStyle}"
                            Command="{Binding ExportStatisticsCommand}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" 
                                       Margin="0,0,5,0"/>
                            <TextBlock Text="导出统计"/>
                        </StackPanel>
                    </Button>
                </Grid>
                
                --><!-- 统计信息网格 --><!--
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    --><!-- 总投入资产数量 --><!--
                    <Border Grid.Column="0"
                            Background="#F0F7FF"
                            CornerRadius="8"
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="总投入资产数量"
                                       FontWeight="Medium"
                                       Foreground="#2D5BD5"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding TotalInvestmentQuantity}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                            <TextBlock Text="台"
                                       FontWeight="Medium"
                                       Foreground="#666666"/>
                        </StackPanel>
                    </Border>
                    
                    --><!-- 年度销售预测总额 --><!--
                    <Border Grid.Column="2"
                            Background="#F0F7FF"
                            CornerRadius="8"
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="年度销售预测总额"
                                       FontWeight="Medium"
                                       Foreground="#2D5BD5"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding TotalSalesForecast, StringFormat='¥ {0:N0}'}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                            <TextBlock Text="元"
                                       FontWeight="Medium"
                                       Foreground="#666666"/>
                        </StackPanel>
                    </Border>
                    
                    --><!-- 年度预算总额 --><!--
                    <Border Grid.Column="4"
                            Background="#F0F7FF"
                            CornerRadius="8"
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="年度预算总额"
                                       FontWeight="Medium"
                                       Foreground="#2D5BD5"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding TotalInvestmentBudget, StringFormat='¥ {0:N0}'}"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                            <TextBlock Text="元"
                                       FontWeight="Medium"
                                       Foreground="#666666"/>
                        </StackPanel>
                    </Border>
                    
                    --><!-- 投入资产状态 --><!--
                    <Border Grid.Column="6"
                            Background="#F0F7FF"
                            CornerRadius="8"
                            Padding="15">
                        <StackPanel>
                            <TextBlock Text="投入资产状态"
                                       FontWeight="Medium"
                                       Foreground="#2D5BD5"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding InvestmentStatus}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="#4CAF50"/>
                            <TextBlock Text="{Binding InvestmentStatusDescription}"
                                       FontWeight="Medium"
                                       Foreground="#666666"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Grid>
        </Border>-->
    </Grid>
</UserControl>
