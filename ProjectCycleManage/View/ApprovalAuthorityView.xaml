<UserControl x:Class="ProjectCycleManage.View.ApprovalAuthorityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectCycleManage.Utilities"
             xmlns:vm="clr-namespace:ProjectCycleManage.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="800" 
             d:DesignWidth="1664">
    
    <UserControl.DataContext>
        <vm:ApprovalAuthorityVM/>
    </UserControl.DataContext>
    
    <UserControl.Resources>
        <!-- åŠ¨ç”»èµ„æº -->
        <Storyboard x:Key="CardHoverAnimation" 
                    Duration="0:0:0.2">
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                             To="1.02" 
                             Duration="0:0:0.1"/>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                             To="1.02"
                             Duration="0:0:0.1"/>
        </Storyboard>
        
        <Storyboard x:Key="CardLeaveAnimation" 
                    Duration="0:0:0.2">
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                             To="1.0" 
                             Duration="0:0:0.1"/>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                             To="1.0"
                             Duration="0:0:0.1"/>
        </Storyboard>
        
        <Storyboard x:Key="TypeSelectionAnimation" 
                    Duration="0:0:0.3">
            <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                            Duration="0:0:0.3"/>
            <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).Color" 
                            Duration="0:0:0.3"/>
        </Storyboard>
        
        <!-- é¢œè‰²èµ„æº -->
        <SolidColorBrush  x:Key="PrimaryColor" 
                          Color="#2d5bd6"/>
        <SolidColorBrush  x:Key="SecondaryColor">#666666</SolidColorBrush>
        <SolidColorBrush  x:Key="BackgroundColor">#f5f7fa</SolidColorBrush>
        <SolidColorBrush  x:Key="CardBackgroundColor">#FFFFFF</SolidColorBrush>
        <SolidColorBrush  x:Key="BorderColor">#E0E0E0</SolidColorBrush>
        <SolidColorBrush  x:Key="ConfiguredBorderColor">#4caf50</SolidColorBrush>
        <SolidColorBrush  x:Key="PartialBorderColor">#ff9800</SolidColorBrush>
        <SolidColorBrush  x:Key="DefaultBorderColor">#E0E0E0</SolidColorBrush>
        <SolidColorBrush  x:Key="ActiveBackgroundColor">#e8edff</SolidColorBrush>
        <Color  x:Key="HoverBackgroundColor">#f0f4ff</Color>
        <SolidColorBrush  x:Key="TextColor">#333333</SolidColorBrush>
        
        <!-- é˜´å½±æ•ˆæžœ -->
        <DropShadowEffect x:Key="CardShadow" 
                          BlurRadius="5" 
                          ShadowDepth="0" 
                          Opacity="0.1" 
                          Color="Black"/>
        
        <!-- æ ·å¼å®šä¹‰ -->
        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        
        <Style x:Key="TypeLabelStyle" 
               TargetType="Border">
            <Setter Property="Background" 
                    Value="#F5F5F5"/>
            <Setter Property="CornerRadius" 
                    Value="6"/>
            <Setter Property="Padding" 
                    Value="16,8"/>
            <Setter Property="Cursor" 
                    Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" 
                         Value="True">
                    <Setter Property="Background" 
                            Value="#E8E8E8"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SelectedTypeLabelStyle" 
               TargetType="Border" 
               BasedOn="{StaticResource TypeLabelStyle}">
            <Setter Property="Background" 
                    Value="#2d5bd6"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" 
                         Value="True">
                    <Setter Property="Background" 
                            Value="#1a3a8f"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="TypeTextStyle" 
               TargetType="TextBlock">
            <Setter Property="FontSize" 
                    Value="14"/>
            <Setter Property="FontWeight" 
                    Value="Medium"/>
            <Setter Property="Foreground" 
                    Value="#333333"/>
        </Style>
        
        <Style x:Key="SelectedTypeTextStyle" 
               TargetType="TextBlock" 
               BasedOn="{StaticResource TypeTextStyle}">
            <Setter Property="Foreground" 
                    Value="#FFFFFF"/>
        </Style>
        
        <Style x:Key="ApproverCardStyle" 
               TargetType="Border">
            <Setter Property="Background" 
                    Value="#FFFFFF"/>
            <Setter Property="CornerRadius" 
                    Value="10"/>
            <Setter Property="Padding" 
                    Value="20"/>
            <Setter Property="BorderBrush" 
                    Value="{StaticResource DefaultBorderColor}"/>
            <Setter Property="BorderThickness" 
                    Value="1"/>
            <Setter Property="BorderThickness" 
                    Value="4 0 0 0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="4" 
                                      ShadowDepth="0" 
                                      Opacity="0.12"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform Y="0"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" 
                         Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Y" 
                                                 To="-5" 
                                                 Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="Effect.Opacity" 
                                                 To="0.2" 
                                                 Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius" 
                                                 To="8" 
                                                 Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.Y" 
                                                 To="0" 
                                                 Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="Effect.Opacity" 
                                                 To="0.12" 
                                                 Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius" 
                                                 To="4" 
                                                 Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ApproverCountStyle" 
               TargetType="Border">
            <Setter Property="Background" 
                    Value="#E3F2FD"/>
            <Setter Property="CornerRadius" 
                    Value="10"/>
            <Setter Property="Padding" 
                    Value="6,2"/>
        </Style>
        
        <Style x:Key="OrderNumberStyle" 
               TargetType="Border">
            <Setter Property="Background" 
                    Value="#2d5bd6"/>
        

            <Setter Property="CornerRadius" 
                    Value="12"/>
            <Setter Property="Width" 
                    Value="24"/>
            <Setter Property="Height" 
                    Value="24"/>
            <Setter Property="HorizontalAlignment" 
                    Value="Center"/>
            <Setter Property="VerticalAlignment" 
                    Value="Center"/>
        </Style>

        <!-- å›¾æ ‡æŒ‰é’®æ ·å¼ -->
        <Style x:Key="IconButtonStyle" 
               TargetType="Button">
            <Setter Property="Background" 
                    Value="Transparent"/>
            <Setter Property="BorderThickness" 
                    Value="0"/>
            <Setter Property="Padding" 
                    Value="4"/>
            <Setter Property="Cursor" 
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" 
                         Value="True">
                    <Setter Property="Background" 
                            Value="#f0f0f0"/>
                </Trigger>
                <Trigger Property="IsPressed" 
                         Value="True">
                    <Setter Property="Background" 
                            Value="#e0e0e0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="AvatarStyle" 
               TargetType="Border">
            <Setter Property="Background" 
                    Value="#E8E8E8"/>
            <Setter Property="CornerRadius" 
                    Value="20"/>
            <Setter Property="Width" 
                    Value="40"/>
            <Setter Property="Height" 
                    Value="40"/>
            <Setter Property="HorizontalAlignment" 
                    Value="Center"/>
            <Setter Property="VerticalAlignment" 
                    Value="Center"/>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" 
               TargetType="Button">
            <Setter Property="Background" 
                    Value="#2d5bd6"/>
            <Setter Property="Foreground" 
                    Value="#FFFFFF"/>
            <Setter Property="BorderThickness" 
                    Value="0"/>
            <Setter Property="Padding" 
                    Value="20,10"/>
            <Setter Property="FontSize" 
                    Value="14"/>
            <Setter Property="FontWeight" 
                    Value="Medium"/>
            <Setter Property="Cursor" 
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" 
                         Value="True">
                    <Setter Property="Background" 
                            Value="#1a3a8f"/>
                </Trigger>
                <Trigger Property="IsPressed" 
                         Value="True">
                    <Setter Property="Background" 
                            Value="#0f2a6b"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" 
               TargetType="Button">
            <Setter Property="Background" 
                    Value="#F5F5F5"/>
            <Setter Property="Foreground" 
                    Value="#333333"/>
            <Setter Property="BorderThickness" 
                    Value="0"/>
            <Setter Property="Padding" 
                    Value="20,10"/>
            <Setter Property="FontSize" 
                    Value="14"/>
            <Setter Property="FontWeight" 
                    Value="Medium"/>
            <Setter Property="Cursor" 
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" 
                         Value="True">
                    <Setter Property="Background" 
                            Value="#E8E8E8"/>
                </Trigger>
                <Trigger Property="IsPressed" 
                         Value="True">
                    <Setter Property="Background" 
                            Value="#D8D8D8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- æ”¹è¿›çš„ä¸»æŒ‰é’®æ ·å¼ - åŸºäºŽHTMLæ•ˆæžœ -->
        <Style x:Key="ImprovedPrimaryButtonStyle" 
               TargetType="Button">
            <Setter Property="Background" 
                    Value="#2d5bd6"/>
            <Setter Property="Foreground" 
                    Value="#FFFFFF"/>
            <Setter Property="BorderThickness" 
                    Value="0"/>
            <Setter Property="Padding" 
                    Value="12,8"/>
            <Setter Property="FontSize" 
                    Value="14"/>
            <Setter Property="FontWeight" 
                    Value="Medium"/>
            <Setter Property="Cursor" 
                    Value="Hand"/>
            <Setter Property="BorderBrush" 
                    Value="Transparent"/>
            <Setter Property="BorderThickness" 
                    Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" 
                                     Value="True">
                                <Setter TargetName="Border" 
                                        Property="Background" 
                                        Value="#1a3a8f"/>
                            </Trigger>
                            <Trigger Property="IsPressed" 
                                     Value="True">
                                <Setter TargetName="Border" 
                                        Property="Background" 
                                        Value="#0f2a6b"/>
                                <Setter TargetName="Border" 
                                        Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- æ”¹è¿›çš„æ¬¡è¦æŒ‰é’®æ ·å¼ - åŸºäºŽHTMLæ•ˆæžœ -->
        <Style x:Key="ImprovedSecondaryButtonStyle" 
               TargetType="Button">
            <Setter Property="Background" 
                    Value="#f5f7fa"/>
            <Setter Property="Foreground" 
                    Value="#666666"/>
            <Setter Property="BorderThickness" 
                    Value="1"/>
            <Setter Property="BorderBrush" 
                    Value="#e0e0e0"/>
            <Setter Property="Padding" 
                    Value="12,8"/>
            <Setter Property="FontSize" 
                    Value="14"/>
            <Setter Property="FontWeight" 
                    Value="Medium"/>
            <Setter Property="Cursor" 
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" 
                                     Value="True">
                                <Setter TargetName="Border" 
                                        Property="Background" 
                                        Value="#e0e0e0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" 
                                     Value="True">
                                <Setter TargetName="Border" 
                                        Property="Background" 
                                        Value="#d0d0d0"/>
                                <Setter TargetName="Border" 
                                        Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- é˜´å½±æ•ˆæžœèµ„æº -->
        <DropShadowEffect x:Key="EditSidebarShadowEffect" BlurRadius="30" ShadowDepth="0" Opacity="0.4" Color="#000000" Direction="270"/>
        
        <!-- æŠ½å±‰åŠ¨ç”» -->
        <Storyboard x:Key="DrawerSlideInAnimation" Duration="0:0:0.3">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" 
                             From="450" To="0" Duration="0:0:0.3" 
                             DecelerationRatio="0.7"/>
        </Storyboard>
        
        <Storyboard x:Key="DrawerSlideOutAnimation" Duration="0:0:0.3">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" 
                             From="0" To="450" Duration="0:0:0.3" 
                             AccelerationRatio="0.7"/>
        </Storyboard>
        
        <!-- é®ç½©å±‚åŠ¨ç”» -->
        <Storyboard x:Key="OverlayFadeInAnimation" Duration="0:0:0.2">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="0.5" Duration="0:0:0.2"/>
        </Storyboard>
        
        <Storyboard x:Key="OverlayFadeOutAnimation" Duration="0:0:0.2">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0.5" To="0" Duration="0:0:0.2"/>
        </Storyboard>
        
        <!-- å“åº”å¼å¸ƒå±€è§¦å‘å™¨ -->
        <Style x:Key="ResponsiveGridStyle" 
               TargetType="Grid">
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=ActualWidth}" 
                             Value="800">
                    <Setter Property="Margin" 
                            Value="10"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=ActualWidth}" 
                             Value="600">
                    <Setter Property="Margin" 
                            Value="5"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- å“åº”å¼å¡ç‰‡å®½åº¦ -->
        <Style x:Key="ResponsiveCardStyle" 
               TargetType="Border" 
               BasedOn="{StaticResource ApproverCardStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ScrollViewer}, Path=ActualWidth}" 
                             Value="1000">
                    <Setter Property="Width" 
                            Value="300"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ScrollViewer}, Path=ActualWidth}" 
                             Value="800">
                    <Setter Property="Width" 
                            Value="280"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ScrollViewer}, Path=ActualWidth}" 
                             Value="600">
                    <Setter Property="Width" 
                            Value="260"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- è½¬æ¢å™¨å®šä¹‰ -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    
    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- æ ‡é¢˜æ  -->
        <Border Grid.Row="0"
                Background="White"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!--<TextBlock Grid.Column="0"
                           Text="å®¡æ‰¹äººè®¾ç½®"/>-->
                <Border BorderThickness="0 0 0 1"
                        BorderBrush="#BBBBBB">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/Resources/Images/æ•°æ®åˆ†æž.png" 
                               Height="25"/>
                        <TextBlock Text=" å®¡æ‰¹äººè®¾ç½®"
                                   VerticalAlignment="Center"
                                   FontSize="25"
                                   FontWeight="Bold"
                                   Foreground="#2D5BD5"/>
                    </StackPanel>
                </Border>
                
            </Grid>
        </Border>
        
        <!-- é¡¹ç›®ç±»åž‹é€‰æ‹©å™¨ -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding ProjectTypes}" Margin="20,0,20,0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Orientation="Horizontal" Margin="0,0,10,10"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button x:Name="TypeButton"
                                Padding="20,10"
                                Height="50"
                                Width="118"
                                Margin="0 10 10 0"
                                BorderThickness="0"
                                Command="{Binding DataContext.SelectProjectTypeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                CommandParameter="{Binding}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{StaticResource CardBackgroundColor}"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="5" ShadowDepth="0" Opacity="0.1" Color="Black"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        Effect="{TemplateBinding Effect}">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
                                            <Setter Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                        </DataTrigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect BlurRadius="8" ShadowDepth="0" Opacity="0.2" Color="Black"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter Property="Background" Value="#1a3a8f"/>
                                            <Setter Property="BorderBrush" Value="#1a3a8f"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <TextBlock Text="{Binding TypeName}" 
                                       FontSize="14" 
                                       FontWeight="SemiBold">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                                <Setter Property="Foreground" Value="White"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <!-- ä¸»å†…å®¹åŒºåŸŸ -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- å®¡æ‰¹äººå¡ç‰‡å®¹å™¨ -->
            <ScrollViewer Grid.Column="0"
                          VerticalScrollBarVisibility="Auto"
                          Margin="20 0 20 20">
                <ItemsControl ItemsSource="{Binding SelectedProjectType.ApprovalStages}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" 
                                       HorizontalAlignment="Stretch"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <!-- å®¡æ‰¹äººå¡ç‰‡æ¨¡æ¿ -->
                            <Border Margin="0,0,20,20"
                                    Width="320">
                                <Border.Style>
                                    <Style TargetType="Border" BasedOn="{StaticResource ApproverCardStyle}">
                                        <Setter Property="BorderBrush" Value="{StaticResource DefaultBorderColor}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ApproverCount}" Value="0">
                                                <Setter Property="BorderBrush" Value="{StaticResource DefaultBorderColor}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ApproverCount}" Value="1">
                                                <Setter Property="BorderBrush" Value="{StaticResource PartialBorderColor}"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ApproverCount}" Value="3">
                                                <Setter Property="BorderBrush" Value="{StaticResource ConfiguredBorderColor}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <!-- å¡ç‰‡å¤´éƒ¨ -->
                                    <Grid Grid.Row="0" Margin="0,0,0,15">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0" 
                                                   Text="{Binding StageName}" 
                                                   FontSize="18" 
                                                   FontWeight="SemiBold" 
                                                   Foreground="#333333"/>
                                        
                                        <Border Grid.Column="1" 
                                                Style="{StaticResource ApproverCountStyle}">
                                            <TextBlock Text="{Binding ApproverCount, StringFormat={}{0}äºº}" 
                                                       FontSize="12" FontWeight="Medium" 
                                                       Foreground="#2196F3"/>
                                        </Border>
                                    </Grid>
                                    
                                    <!-- å®¡æ‰¹äººåˆ—è¡¨ -->
                                    <ItemsControl Grid.Row="1" 
                                                  ItemsSource="{Binding Approvers}" 
                                                  Margin="0,0,0,15">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Margin="0,0,0,8" 
                                                        Padding="0,8" 
                                                        BorderBrush="#F0F0F0"
                                                        BorderThickness="0,0,0,1">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <!-- åºå· -->
                                                        <Border Grid.Column="0" 
                                                                Width="20" Height="20" 
                                                                Background="#e8edff" 
                                                                CornerRadius="10" 
                                                                Margin="0,0,10,0">
                                                            <TextBlock Text="{Binding Order}"
                                                                       Foreground="{StaticResource PrimaryColor}" 
                                                                       FontSize="12"
                                                                       FontWeight="Bold"
                                                                       HorizontalAlignment="Center"
                                                                       VerticalAlignment="Center"/>
                                                        </Border>
                                                        
                                                        <!-- å¤´åƒ -->
                                                        <Border Grid.Column="1" 
