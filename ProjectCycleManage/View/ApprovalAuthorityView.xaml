<UserControl x:Class="ProjectCycleManage.View.ApprovalAuthorityView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectCycleManage.Utilities"
             xmlns:vm="clr-namespace:ProjectCycleManage.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="800" 
             d:DesignWidth="1664">
    
    <UserControl.DataContext>
        <vm:ApprovalAuthorityVM/>
    </UserControl.DataContext>
    
    <UserControl.Resources>
        <!-- 动画资源 -->
        <Storyboard x:Key="CardHoverAnimation" Duration="0:0:0.2">
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.02" Duration="0:0:0.1"/>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.02" Duration="0:0:0.1"/>
        </Storyboard>
        
        <Storyboard x:Key="CardLeaveAnimation" Duration="0:0:0.2">
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" To="1.0" Duration="0:0:0.1"/>
            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" To="1.0" Duration="0:0:0.1"/>
        </Storyboard>
        
        <Storyboard x:Key="TypeSelectionAnimation" Duration="0:0:0.3">
            <ColorAnimation Storyboard.TargetProperty="Background.Color" Duration="0:0:0.3"/>
            <ColorAnimation Storyboard.TargetProperty="(TextBlock.Foreground).Color" Duration="0:0:0.3"/>
        </Storyboard>
        
        <!-- 颜色资源 -->

        <SolidColorBrush  x:Key="PrimaryColor">#2196F3</SolidColorBrush>
        <SolidColorBrush  x:Key="SecondaryColor">#666666</SolidColorBrush>
        <SolidColorBrush  x:Key="BackgroundColor">#F8F9FA</SolidColorBrush>
        <SolidColorBrush  x:Key="CardBackgroundColor">#FFFFFF</SolidColorBrush>
        <SolidColorBrush  x:Key="BorderColor">#E0E0E0</SolidColorBrush>
        
        <!-- 样式定义 -->
        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        
        <Style x:Key="TypeLabelStyle" TargetType="Border">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E0E0E0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="SelectedTypeLabelStyle" TargetType="Border" BasedOn="{StaticResource TypeLabelStyle}">
            <Setter Property="Background" Value="#2196F3"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="TypeTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#666666"/>
        </Style>
        
        <Style x:Key="SelectedTypeTextStyle" TargetType="TextBlock" BasedOn="{StaticResource TypeTextStyle}">
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        
        <Style x:Key="ApproverCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard Storyboard="{StaticResource CardHoverAnimation}"/>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard Storyboard="{StaticResource CardLeaveAnimation}"/>
                    </Trigger.ExitActions>
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="BorderThickness" Value="2"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="15" ShadowDepth="3" Opacity="0.15"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ApproverCountStyle" TargetType="Border">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="6,2"/>
        </Style>
        
        <Style x:Key="OrderNumberStyle" TargetType="Border">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
        </Style>
        
        <Style x:Key="AvatarStyle" TargetType="Border">
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
        </Style>
        
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1565C0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 响应式布局触发器 -->
        <Style x:Key="ResponsiveGridStyle" TargetType="Grid">
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=ActualWidth}" Value="800">
                    <Setter Property="Margin" Value="10"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=ActualWidth}" Value="600">
                    <Setter Property="Margin" Value="5"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- 响应式卡片宽度 -->
        <Style x:Key="ResponsiveCardStyle" TargetType="Border" BasedOn="{StaticResource ApproverCardStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ScrollViewer}, Path=ActualWidth}" Value="1000">
                    <Setter Property="Width" Value="300"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ScrollViewer}, Path=ActualWidth}" Value="800">
                    <Setter Property="Width" Value="280"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ScrollViewer}, Path=ActualWidth}" Value="600">
                    <Setter Property="Width" Value="260"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="{StaticResource BackgroundColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 标题栏 -->
        <Border Grid.Row="0" Background="White" Padding="20,15" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="审批人设置"/>
            </Grid>
        </Border>
        
        <!-- 项目类型选择器 -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding ProjectTypes}" Margin="20,25,20,0">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border CornerRadius="20" Padding="15,8" Margin="10,0,0,0">
                        <Border.Style>
                            <Style TargetType="Border">
                                <Setter Property="Background" Value="#F5F5F5"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                        <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Border.Style>
                        <Border.InputBindings>
                            <MouseBinding MouseAction="LeftClick" Command="{Binding DataContext.SelectProjectTypeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                        </Border.InputBindings>
                        <TextBlock Text="{Binding TypeName}" Cursor="Hand">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#666666"/>
                                    <Setter Property="FontWeight" Value="Normal"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        
        <!-- 审批人卡片容器 -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Margin="20">
            <ItemsControl ItemsSource="{Binding SelectedProjectType.ApprovalStages}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <!-- 审批人卡片模板 -->
                        <Border Margin="0,0,0,20" Style="{StaticResource ResponsiveCardStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <!-- 卡片头部 -->
                                <Grid Grid.Row="0" Margin="0,0,0,15">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBlock Grid.Column="0" Text="{Binding StageName}" FontSize="18" FontWeight="SemiBold"/>
                                    
                                    <Border Grid.Column="1" Style="{StaticResource ApproverCountStyle}">
                                        <TextBlock Text="{Binding ApproverCount, StringFormat={}{0}人}" FontSize="12" FontWeight="Medium" Foreground="#2196F3"/>
                                    </Border>
                                </Grid>
                                
                                <!-- 审批人列表 -->
                                <ItemsControl Grid.Row="1" ItemsSource="{Binding Approvers}" Margin="0,0,0,15">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Margin="0,0,0,8" Padding="0,8" BorderBrush="#F0F0F0" BorderThickness="0,0,0,1">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <!-- 序号 -->
                                                    <Border Grid.Column="0" Style="{StaticResource OrderNumberStyle}" Margin="0,0,10,0">
                                                        <TextBlock Text="{Binding Order}" Foreground="White" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    
                                                    <!-- 头像 -->
                                                    <Border Grid.Column="1" Style="{StaticResource AvatarStyle}" Margin="0,0,10,0">
                                                        <TextBlock Text="{Binding Initial}" Foreground="#666" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                    
                                                    <!-- 审批人信息 -->
                                                    <StackPanel Grid.Column="2" Orientation="Vertical">
                                                        <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Medium"/>
                                                        <TextBlock Text="{Binding Department}" FontSize="12" Foreground="#999"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                                
                                <!-- 空状态显示 -->
                                <Border Grid.Row="1" Visibility="{Binding Approvers.Count, Converter={x:Static local:CollectionCountToVisibilityConverter.Instance}, ConverterParameter='inverse'}" Margin="0,0,0,15">
                                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="40" Foreground="#E0E0E0" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                        <TextBlock Text="暂无审批人" Foreground="#999" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                                
                                <!-- 操作按钮 -->
                                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <Button Content="编辑审批人" Style="{StaticResource PrimaryButtonStyle}" Command="{Binding DataContext.EditApproversCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
