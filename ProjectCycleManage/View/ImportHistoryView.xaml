<UserControl x:Class="ProjectCycleManage.View.ImportHistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:ProjectCycleManage.ViewModel"
             d:DataContext="{d:DesignInstance Type=vm:ImportHistoryVM}"
             xmlns:local="clr-namespace:ProjectCycleManage.View"
             mc:Ignorable="d" 
             d:DesignHeight="2000"
             d:DesignWidth="1664">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid Margin="20 0 20 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="65"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!-- 页面标题区域 -->
            <Border BorderThickness="0 0 0 1"
                    BorderBrush="#BBBBBB">
                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/添加.png" 
                           Height="25"/>
                    <TextBlock Text=" 导入历史项目"
                               VerticalAlignment="Center"
                               FontSize="25"
                               FontWeight="Bold"
                               Foreground="#2D5BD5"/>
                </StackPanel>
            </Border>

            <!-- 主内容区域 -->
            <Grid Grid.Row="1"
                  Margin="0 30 0 0">

                <Border Width="1000"
                        Background="White"
                        CornerRadius="15">
                    <ScrollViewer>
                        <Grid Margin="30 30 30 30">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="44"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <!-- 表单标题 -->
                            <Border BorderThickness="0 0 0 1"
                                    BorderBrush="#BBBBBB">
                                <StackPanel Orientation="Horizontal">
                                    <Image Source="/Resources/Images/edit-编辑.png"
                                           Height="22" />
                                    <TextBlock Text=" 历史项目信息导入"
                                               VerticalAlignment="Center"
                                               Foreground="#2D5BD5"
                                               FontSize="22" />
                                </StackPanel>
                            </Border>

                            <!-- 表单内容 -->
                            <Grid Grid.Row="1"
                                  Margin="0 15 0 0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="280"/>
                                    <RowDefinition Height="147"/>
                                    <RowDefinition Height="280"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <!-- 项目基本信息部分 -->
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="42"/>
                                        <RowDefinition Height="125"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 分区标题 -->
                                    <Border Grid.ColumnSpan="3">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Resources/Images/基本信息.png"
                                                   Height="16" />
                                            <TextBlock Text=" 基本信息"
                                                       VerticalAlignment="Center"
                                                       Foreground="#2D5BD5"
                                                       FontSize="20"
                                                       FontWeight="Bold"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- 项目名称 -->
                                    <Grid Grid.Row="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="26"/>
                                            <RowDefinition/>
                                            <RowDefinition Height="20.8"/>
                                            <RowDefinition Height="20"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0 0 0 6"
                                                    VerticalAlignment="Center">
                                            <Image Source="/Resources/Images/签名.png" 
                                                   Height="20"/>
                                            <TextBlock Text=" 项目名称"
                                                       Foreground="#555555"
                                                       FontSize="16" />
                                            <TextBlock Text=" *"
                                                       Foreground="Red"/>
                                        </StackPanel>

                                        <TextBox Grid.Row="1"
                                                 FontSize="14"
                                                 Height="48"
                                                 HorizontalContentAlignment="Left"
                                                 VerticalContentAlignment="Center"
                                                 Text="{Binding ProjectName}"/>
                                        <TextBlock Grid.Row="2"
                                                   Text="请输入历史项目原始名称"
                                                   Foreground="#888888"
                                                   FontSize="13"/>
                                    </Grid>

                                    <!-- 原始项目编号 -->
                                    <Grid Grid.Row="1"
                                          Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="26"/>
                                            <RowDefinition/>
                                            <RowDefinition Height="20.8"/>
                                            <RowDefinition Height="20"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0 0 0 6"
                                                    VerticalAlignment="Center">
                                            <Image Source="/Resources/Images/井字符.png" 
                                                   Width="14"
                                                   Height="16"/>
                                            <TextBlock Text=" 项目编号"
                                                       Foreground="#555555"
                                                       FontSize="16"/>
                                            <TextBlock Text=" *"
                                                       Foreground="Red"/>
                                        </StackPanel>

                                        <TextBox Grid.Row="1"
                                                 FontSize="14"
                                                 Height="48"
                                                 HorizontalContentAlignment="Left"
                                                 VerticalContentAlignment="Center"
                                                 Text="{Binding OriginalCode}"/>
                                        <TextBlock Grid.Row="2"
                                                   Text="历史项目原始编号，非系统自动生成"
                                                   Foreground="#888888"
                                                   FontSize="13"/>
                                    </Grid>

                                    <!-- 设备类型 -->
                                    <Grid Grid.Row="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="26"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0 0 0 6"
                                                    VerticalAlignment="Center">
                                            <Image Source="/Resources/Images/设备类型.png"
                                                   Height="20" />
                                            <TextBlock Text=" 设备类型"
                                                       Foreground="#555555"
                                                       FontSize="16" />
                                            <TextBlock Text=" *"
                                                       Foreground="Red"/>
                                        </StackPanel>

                                        <ComboBox Grid.Row="1"
                                                  FontSize="14"
                                                  Height="48"
                                                  ItemsSource="{Binding EquipmentTypes}"
                                                  DisplayMemberPath="EquipmentName"
                                                  SelectedValuePath="EquipmentTypeId"
                                                  SelectedItem="{Binding SelectedEquipmentType, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                  HorizontalContentAlignment="Left"
                                                  VerticalContentAlignment="Center" />
                                    </Grid>

                                    <!-- 项目类型 -->
                                    <Grid Grid.Row="2"
                                          Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="26"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0 0 0 6"
                                                    VerticalAlignment="Center">
                                            <Image Source="/Resources/Images/项目类型.png"
                                                   Height="20" />
                                            <TextBlock Text=" 项目类型"
                                                       Foreground="#555555"
                                                       FontSize="16" />
                                            <TextBlock Text=" *"
                                                       Foreground="Red"/>
                                        </StackPanel>

                                        <ComboBox Grid.Row="1"
                                                  FontSize="14"
                                                  Height="48"
                                                  ItemsSource="{Binding Types}"
                                                  DisplayMemberPath="TypeName"
                                                  SelectedValuePath="TypeId"
                                                  SelectedItem="{Binding SelectedType, Mode=TwoWay}"
                                                  HorizontalContentAlignment="Left"
                                                  VerticalContentAlignment="Center" />
                                    </Grid>
                                </Grid>

                                <!-- 人员信息部分 -->
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="42"/>
                                        <RowDefinition Height="105"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.ColumnSpan="3">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Resources/Images/人员信息.png"
                                                   Height="16"/>
                                            <TextBlock Text=" 人员信息"
                                                       VerticalAlignment="Center"
                                                       Foreground="#2D5BD5"
                                                       FontSize="20"
                                                       FontWeight="Bold"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- 项目负责人 -->
                                    <Grid Grid.Row="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="26"/>
                                            <RowDefinition/>
                                            <RowDefinition Height="20.8"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0 0 0 6"
                                                    VerticalAlignment="Center">
                                            <Image Source="/Resources/Images/项目负责人.png" 
                                                   Height="16"/>
                                            <TextBlock Text=" 项目负责人"
                                                       Foreground="#555555"
                                                       FontSize="16"/>
                                        </StackPanel>

                                        <ComboBox Grid.Row="1"
                                                  FontSize="14"
                                                  Height="48"
                                                  ItemsSource="{Binding Employees}"
                                                  DisplayMemberPath="PeopleName"
                                                  SelectedValuePath="PeopleId"
                                                  SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}"
                                                  HorizontalContentAlignment="Left"
                                                  VerticalContentAlignment="Center"/>
                                        <TextBlock Grid.Row="2"
                                                   Text="选择历史项目负责人"
                                                   Foreground="#888888"
                                                   FontSize="13"/>
                                    </Grid>

                                    <!-- 申请人 -->
                                    <Grid Grid.Row="1"
                                          Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="26"/>
                                            <RowDefinition/>
                                            <RowDefinition Height="20.8"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0 0 0 6"
                                                    VerticalAlignment="Center">
                                            <Image Source="/Resources/Images/申请人.png" 
                                                   Width="16"
                                                   Height="16"/>
                                            <TextBlock Text=" 申请人"
                                                       Foreground="#555555"
                                                       FontSize="16"/>
                                        </StackPanel>

                                        <TextBox Grid.Row="1"
                                                 FontSize="14"
                                                 Height="48"
                                                 HorizontalContentAlignment="Left"
                                                 VerticalContentAlignment="Center"
                                                 Text="{Binding Applicant}"/>
                                    </Grid>
                                </Grid>

                                <!-- 部门与时间信息部分 -->
                                <Grid Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="42"/>
                                        <RowDefinition Height="105"/>
                                        <RowDefinition/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="20"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.ColumnSpan="3">
                                        <StackPanel Orientation="Horizontal">
                                            <Image Source="/Resources/Images/部门与时间信息.png"
                                                   Height="16"/>
                                            <TextBlock Text=" 部门与时间信息"
                                                       VerticalAlignment="Center"
                                                       Foreground="#2D5BD5"
                                                       FontSize="20"
                                                       FontWeight="Bold"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- 使用部门 -->
                                    <Grid Grid.Row="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="26"/>
                                            <RowDefinition/>
                                            <RowDefinition Height="20.8"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0 0 0 6"
                                                    VerticalAlignment="Center">
                                            <Image Source="/Resources/Images/使用部门.png" 
                                                   Height="20"/>
                                            <TextBlock Text=" 使用部门"
                                                       Foreground="#555555"
                                                       FontSize="16"/>
                                        </StackPanel>

                                        <TextBox Grid.Row="1"
                                                 FontSize="14"
                                                 Height="48"
                                                 HorizontalContentAlignment="Left"
                                                 VerticalContentAlignment="Center"
                                                 Text="{Binding Usingdepartment}"/>
                                    </Grid>

                                    <!-- 申请日期 -->
                                    <Grid Grid.Row="1"
                                          Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="26"/>
                                            <RowDefinition/>
                                            <RowDefinition Height="20.8"/>
                                        </Grid.RowDefinitions>

                                        <StackPanel Orientation="Horizontal"
                                                    Margin="0 0 0 6"
                                                    VerticalAlignment="Center">
                                            <Image Source="/Resources/Images/申请日期.png" 
                                                   Width="14"
                                                   Height="16"/>
                                            <TextBlock Text=" 申请日期"
                                                       Foreground="#555555"
                                                       FontSize="16"/>
                                        </StackPanel>

                                        <Border Grid.Row="1"
                                                Width="445"
                                                HorizontalAlignment="Left"
                                                Height="48"
                                                CornerRadius="5"
                                                BorderBrush="#abadb3"
                                                BorderThickness="1">
                                            <DatePicker Width="440"
                                                        Height="40"
                                                        BorderThickness="0"
                                                        VerticalContentAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        SelectedDate="{Binding Applicationtime}"
                                                        Style="{StaticResource LargeDatePickerStyle}"
                                                        FontSize="14"/>
                                        </Border>
                                        <TextBlock Grid.Row="2"
                                                   Text="  "
                                                   Foreground="#888888"
                                                   FontSize="13"/>
                                    </Grid>

                                    <!-- 项目年份 -->
                                    <Grid Grid.Row="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="26"/>
                                            <RowDefinition/>
                                            <RowDefinition Height="20"/>
                                        </Grid.RowDefinitions>

                                        <Border>
                                            <StackPanel Orientation="Horizontal"
                    Margin="0 0 0 6"
                    VerticalAlignment="Center">
                                                <Image Source="/Resources/Images/年份.png   " 
                    Height="20"/>
                                                <TextBlock Text=" 年份"
                        Foreground="#555555"
                        FontSize="16"/>
                                                <TextBlock Text=" *"
                                                           Foreground="Red"/>
                                            </StackPanel>
                                        </Border>

                                        <!--<TextBox Grid.Row="1"
                                                 FontSize="14"
                                                 Height="48"
                                                 Text="{Binding Year}">

                                        </TextBox>-->
                                        <ComboBox Grid.Row="1"
                                                  FontSize="14"
                                                  Height="48"
                                                  ItemsSource="{Binding Years}"
                                                  SelectedItem="{Binding SelectedYear, Mode=TwoWay}"
                                                  HorizontalContentAlignment="Left"
                                                  VerticalContentAlignment="Center"/>
                                        <TextBlock Grid.Row="2"
                                                   Text="  "
                                                   Foreground="#555555"/>

                                    </Grid>
                                </Grid>

                                <!-- 动态扩展信息部分 -->
                                <StackPanel Grid.Row="3">

                                    <!-- 动态信息区域 -->
                                    <ItemsControl ItemsSource="{Binding DynamicStageGroups}"
                                             Visibility="{Binding HasDynamicContent, Converter={StaticResource BooleanToVisibilityConverter}}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#F9F9F9"
                                                    CornerRadius="8"
                                                    Padding="20"
                                                    BorderThickness="4 0 0 0"
                                                    BorderBrush="#FF9800"
                                                    Margin="0 0 0 30">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="42"/>
                                                            <RowDefinition/>
                                                        </Grid.RowDefinitions>

                                                        <!-- 阶段标题 -->
                                                        <Border>
                                                            <StackPanel Orientation="Horizontal">
                                                                <Image Source="/Resources/Images/设备类型.png"
                                                                   Height="16" />
                                                                <TextBlock Text="{Binding StageName, StringFormat=' {0}'}"
                                                                       VerticalAlignment="Center"
                                                                       Foreground="#2D5BD5"
                                                                       FontSize="20"
                                                                       FontWeight="Bold"/>
                                                            </StackPanel>
                                                        </Border>

                                                        <!-- 阶段项列表 -->
                                                        <ItemsControl Grid.Row="1"
                                                                  ItemsSource="{Binding Items}"
                                                                  Margin="0 10 0 0">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <Grid Margin="0 0 0 15">
                                                                        <Grid.RowDefinitions>
                                                                            <RowDefinition Height="26"/>
                                                                            <RowDefinition Height="48"/>
                                                                        </Grid.RowDefinitions>

                                                                        <!-- 字段标签 -->
                                                                        <StackPanel Orientation="Horizontal"
                                                                                Margin="0 0 0 6"
                                                                                VerticalAlignment="Center">
                                                                            <TextBlock Text="{Binding Name}"
                                                                                   Foreground="#555555"
                                                                                   FontSize="16" />
                                                                            <!-- 废除标记 -->
                                                                            <Border Background="#FFF3E0"
                                                                                CornerRadius="4"
                                                                                Padding="4 2"
                                                                                Margin="8 0 0 0"
                                                                                Visibility="{Binding IsAbolished, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                                                <TextBlock Text="历史字段"
                                                                                       Foreground="#FF9800"
                                                                                       FontSize="12"/>
                                                                            </Border>
                                                                        </StackPanel>

                                                                        <!-- 根据类型显示不同控件 -->
                                                                        <!-- CheckBox - 文档类型 -->
                                                                        <CheckBox Grid.Row="1"
                                                                              Content="已上传"
                                                                              IsChecked="{Binding CheckboxValue, Mode=TwoWay}"
                                                                              VerticalAlignment="Center"
                                                                              FontSize="14"
                                                                              Visibility="{Binding IsCheckbox, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                                                        <!-- TextBox - 信息-填写/文档-OA -->
                                                                        <TextBox Grid.Row="1"
                                                                             FontSize="14"
                                                                             Height="48"
                                                                             HorizontalContentAlignment="Left"
                                                                             VerticalContentAlignment="Center"
                                                                             Text="{Binding TextValue, Mode=TwoWay}"
                                                                             Visibility="{Binding IsTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                                                        <!-- ComboBox - 信息-下拉框 -->
                                                                        <ComboBox Grid.Row="1"
                                                                              FontSize="14"
                                                                              Height="48"
                                                                              HorizontalContentAlignment="Left"
                                                                              VerticalContentAlignment="Center"
                                                                              ItemsSource="{Binding DataContext.Employees, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                                              DisplayMemberPath="PeopleName"
                                                                              SelectedValuePath="PeopleId"
                                                                              SelectedItem="{Binding SelectedComboValue, Mode=TwoWay}"
                                                                              Visibility="{Binding IsComboBox, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                                                                        <!-- DatePicker - 信息-日期 -->
                                                                        <DatePicker Grid.Row="1"
                                                                                    Width="405"
                                                                                    Height="48"
                                                                                    FontSize="14"
                                                                                    SelectedDate="{Binding DateValue, Mode=TwoWay}"
                                                                                    VerticalContentAlignment="Center"
                                                                                    Visibility="{Binding IsDatePicker, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                                                    Style="{StaticResource LargeDatePickerStyle}"/>
                                                                    </Grid>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- 备注信息部分 -->
                                    <Grid Margin="0 0 0 20">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="42"/>
                                            <RowDefinition Height="150"/>
                                        </Grid.RowDefinitions>

                                        <!-- 分区标题 -->
                                        <Border>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="/Resources/Images/备注01.png"
                                                       Height="16" />
                                                <TextBlock Text=" 备注信息"
                                                           VerticalAlignment="Center"
                                                           Foreground="#2D5BD5"
                                                           FontSize="20"
                                                           FontWeight="Bold"/>
                                            </StackPanel>
                                        </Border>

                                        <!-- 备注文本框 -->
                                        <Grid Grid.Row="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="26"/>
                                                <RowDefinition/>
                                                <RowDefinition Height="20"/>
                                            </Grid.RowDefinitions>

                                            <StackPanel Orientation="Horizontal"
                                                        Margin="0 0 0 6"
                                                        VerticalAlignment="Center">
                                                <TextBlock Text="✏️ 历史项目备注"
                                                           Foreground="#555555"
                                                           FontSize="16" />
                                            </StackPanel>

                                            <TextBox Grid.Row="1"
                                                     FontSize="14"
                                                     TextWrapping="Wrap"
                                                     AcceptsReturn="True"
                                                     VerticalScrollBarVisibility="Auto"
                                                     Padding="8"
                                                     Text="{Binding Notes}"/>
                                            <TextBlock Grid.Row="2"
                                                       Text="备注信息将随项目一起保存，便于后续查询"
                                                       Foreground="#888888"
                                                       FontSize="13"/>
                                        </Grid>
                                    </Grid>

                                    <!-- 表单操作按钮 -->
                                    <Grid Height="100"
                                          VerticalAlignment="Top"
                                          Margin="0 20 0 0">
                                        <Border BorderBrush="#abadb3"
                                                BorderThickness="0 1 0 0">
                                            <StackPanel Orientation="Horizontal"
                                                        HorizontalAlignment="Right"
                                                        Margin="0 0 0 0">
                                                <Button Width="129"
                                                        Height="46"
                                                        Background="Transparent"
                                                        Command="{Binding ResetCommand}">
                                                    <Button.Content>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Image Source="/Resources/Images/重置.png"
                                                                   Width="16"/>
                                                            <TextBlock Text="重置表单"
                                                                       Margin="10 0 0 0"
                                                                       Foreground="#555555"
                                                                       FontSize="14"/>
                                                        </StackPanel>
                                                    </Button.Content>
                                                </Button>


                                                <Button Width="129"
                                                        Height="46"
                                                        Margin="30 0 0 0"
                                                        Background="#2D5BD5"
                                                        Command="{Binding ImportCommand}">
                                                    <Button.Content>
                                                        <StackPanel Orientation="Horizontal">
                                                            <Image Source="/Resources/Images/保存.png"
                                                                   Width="16"/>
                                                            <TextBlock Text="导入项目"
                                                                       Margin="10 0 0 0"
                                                                       Foreground="White"
                                                                       FontSize="14"/>
                                                        </StackPanel>
                                                    </Button.Content>
                                                </Button>
                                            </StackPanel>
                                        </Border>
                                    </Grid>

                                </StackPanel>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
