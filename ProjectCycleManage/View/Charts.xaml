<UserControl x:Class="ProjectCycleManage.View.Charts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectCycleManage.View"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:vm="clr-namespace:ProjectCycleManage.ViewModel"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:ChartsVM}"
             d:DesignHeight="3500" 
             d:DesignWidth="1625">
    <Grid>
        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="94"/>
                    <RowDefinition Height="418"/>
                    
                    <RowDefinition Height="94"/>
                    <RowDefinition Height="418"/>
                    
                    <RowDefinition Height="94"/>
                    <RowDefinition Height="418"/>
                    <RowDefinition Height="418"/>
                    
                    <RowDefinition Height="94"/>
                    <RowDefinition Height="418"/>
                    <RowDefinition Height="418"/>
                    
                    <RowDefinition Height="94"/>
                    <RowDefinition Height="418"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!--#region 预算分析 -->
                <Border Grid.ColumnSpan="3"
                        Grid.Row="0">
                    <Grid Margin="0 30 0 20">
                        <Border Margin="0 0 0 10"
                                BorderThickness="0 0 0 1"
                                BorderBrush="#e0e0e0">
                            <TextBlock Text="预算分析"
                                   FontSize="20"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Foreground="#2D5BD5"/>
                        </Border>

                    </Grid>
                </Border>
                <Border Grid.Row="1"
                        Height="398"
                        VerticalAlignment="Top"
                        CornerRadius="15"
                        Background="White">
                    <Grid Margin="20">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="59"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border>
                            <TextBlock Text="未完成金额/已完成金额/预算剩余金额"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                        </Border>

                        <lvc:PieChart Grid.Row="1"
                                      Series="{Binding Projectbudget_pie}"
                                      LegendPosition="Right"
                                      LegendTextPaint="{Binding LegendTextPaint}"
                                      TooltipTextPaint="{Binding TipTextPaint}"/>
                    </Grid>
                </Border>

                <Border Height="398"
                        Grid.Row="1"
                        Grid.Column="2"
                        VerticalAlignment="Top"
                        CornerRadius="15"
                        Background="White">
                    <Grid Margin="20">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="59"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border>
                            <TextBlock Text="项目费用"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                        </Border>

                        <lvc:CartesianChart Grid.Row="1"
                                            Series="{Binding ProjectExpendituresseries}"
                                            XAxes="{Binding ProjectExpendituresXAxes}"
                                            LegendPosition="Top"
                                            LegendTextPaint="{Binding LegendTextPaint}"
                                            TooltipTextPaint="{Binding TipTextPaint}"
                                            ZoomMode ="X">
                        </lvc:CartesianChart>
                    </Grid>
                </Border>
                <!--#endregion-->

                <!--#region 历史投入分析 -->
                <Border Grid.ColumnSpan="3"
                        Grid.Row="2">
                    <Grid Margin="0 30 0 20">
                        <Border Margin="0 0 0 10"
                                BorderThickness="0 0 0 1"
                                BorderBrush="#e0e0e0">
                            <TextBlock Text="历史投入分析"
                                   FontSize="20"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Foreground="#2D5BD5"/>
                        </Border>

                    </Grid>
                </Border>
                <Border Height="398"
                        Grid.Row="3"
                        VerticalAlignment="Top"
                        CornerRadius="15"
                        Background="White">
                    <Grid Margin="20">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="59"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border>
                            <TextBlock Text="历史投入金额/历史预算金额/历史销售金额"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                        </Border>

                        <lvc:CartesianChart Grid.Row="1"
                                            Series="{Binding Historinvest_amount}"
                                            LegendPosition="Top"
                                            LegendTextPaint="{Binding LegendTextPaint}"
                                            TooltipTextPaint="{Binding TipTextPaint}"/>
                        <!--<lvc:PieChart Grid.Row="1"
                                      Series="{Binding ProjectprogressSeries}"
                                      LegendPosition="Right"
                                      LegendTextPaint="{Binding LegendTextPaint}"
                                      TooltipTextPaint="{Binding TipTextPaint}">
                        </lvc:PieChart>-->
                    </Grid>
                </Border>

                <Border Height="398"
                        Grid.Column="2"
                        Grid.Row="3"
                        VerticalAlignment="Top"
                        CornerRadius="15"
                        Background="White">
                    <Grid Margin="20">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="59"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border>
                            <TextBlock Text="人员项目情况"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                        </Border>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <lvc:CartesianChart Grid.Row="1"
                                                Series="{Binding Historinvest_quantity}"
                                                LegendPosition="Top"
                                                LegendTextPaint="{Binding LegendTextPaint}"
                                                TooltipTextPaint="{Binding TipTextPaint}"/>

                        </Grid>

                        
                    </Grid>
                </Border>
                
                <!--#endregion-->

                <!--#region 项目进度 -->
                <Border Grid.ColumnSpan="3"
                        Grid.Row="4">
                    <Grid Margin="0 30 0 20">
                        <Border Margin="0 0 0 10"
                                BorderThickness="0 0 0 1"
                                BorderBrush="#e0e0e0">
                            <TextBlock Text="部门完成进度"
                                   FontSize="20"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Foreground="#2D5BD5"/>
                        </Border>

                    </Grid>
                </Border>
                <Border Height="398"
                        Grid.Row="5"
                        VerticalAlignment="Top"
                        CornerRadius="15"
                        Background="White">
                    <Grid Margin="20">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="59"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border>
                            <TextBlock Text="项目进度"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                        </Border>

                        <lvc:PieChart Grid.Row="1"
                                      Series="{Binding ProjectprogressSeries}"
                                      LegendPosition="Right"
                                      LegendTextPaint="{Binding LegendTextPaint}"
                                      TooltipTextPaint="{Binding TipTextPaint}">
                        </lvc:PieChart>
                    </Grid>
                </Border>

                <Border Height="398"
                        Grid.Column="2"
                        Grid.Row="5"
                        VerticalAlignment="Top"
                        CornerRadius="15"
                        Background="White">
                    <Grid Margin="20">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="59"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border>
                            <TextBlock Text="人员项目情况"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                        </Border>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <lvc:PieChart Series="{Binding Projectleaderinformation}"
                                          LegendPosition="Top"
                                          LegendTextPaint="{Binding LegendTextPaint}"
                                          TooltipTextPaint="{Binding TipTextPaint}">
                            </lvc:PieChart>

                            <lvc:PieChart Grid.Column="1"
                                          Series="{Binding Projectfollowpoepleinformation}"
                                          LegendPosition="Top"
                                          LegendTextPaint="{Binding LegendTextPaint}"
                                          TooltipTextPaint="{Binding TipTextPaint}">
                            </lvc:PieChart>

                        </Grid>


                    </Grid>
                </Border>

                <Border Height="398"
                        Grid.Row="6"
                        VerticalAlignment="Top"
                        CornerRadius="15"
                        Background="White">
                    <Grid Margin="20">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="59"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border>
                            <TextBlock Text="项目进度"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                        </Border>

                        <lvc:PieChart Grid.Row="1"
                                      Series="{Binding ProjectprogressSeries}"
                                      LegendPosition="Right"
                                      LegendTextPaint="{Binding LegendTextPaint}"
                                      TooltipTextPaint="{Binding TipTextPaint}">
                        </lvc:PieChart>
                    </Grid>
                </Border>
                <!--#endregion-->

                <!--#region 个人完成进度 -->
                <Border Grid.ColumnSpan="3"
                        Grid.Row="7">
                    <Grid Margin="0 30 0 20">
                        <Border Margin="0 0 0 10"
                                BorderThickness="0 0 0 1"
                                BorderBrush="#e0e0e0">
                            <TextBlock Text="个人完成进度"
                                   FontSize="20"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Foreground="#2D5BD5"/>
                        </Border>

                    </Grid>
                </Border>
                <Border Height="398"
                        Grid.Row="8"
                        VerticalAlignment="Top"
                        CornerRadius="15"
                        Background="White">
                    <Grid Margin="20">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="59"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border>
                            <TextBlock Text="项目进度"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                        </Border>

                        <lvc:PieChart Grid.Row="1"
                                      Series="{Binding ProjectprogressSeries}"
                                      LegendPosition="Right"
                                      LegendTextPaint="{Binding LegendTextPaint}"
                                      TooltipTextPaint="{Binding TipTextPaint}">
                        </lvc:PieChart>
                    </Grid>
                </Border>

                <Border Height="398"
                        Grid.Column="2"
                        Grid.Row="8"
                        VerticalAlignment="Top"
                        CornerRadius="15"
                        Background="White">
                    <Grid Margin="20">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="59"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border>
                            <TextBlock Text="人员项目情况"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                        </Border>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <lvc:PieChart Series="{Binding Projectleaderinformation}"
                                          LegendPosition="Top"
                                          LegendTextPaint="{Binding LegendTextPaint}"
                                          TooltipTextPaint="{Binding TipTextPaint}">
                            </lvc:PieChart>

                            <lvc:PieChart Grid.Column="1"
                                          Series="{Binding Projectfollowpoepleinformation}"
                                          LegendPosition="Top"
                                          LegendTextPaint="{Binding LegendTextPaint}"
                                          TooltipTextPaint="{Binding TipTextPaint}">
                            </lvc:PieChart>

                        </Grid>


                    </Grid>
                </Border>
                <Border Height="398"
                        Grid.Row="9"
                        VerticalAlignment="Top"
                        CornerRadius="15"
                        Background="White">
                    <Grid Margin="20">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="59"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border>
                            <TextBlock Text="项目进度"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                        </Border>

                        <lvc:PieChart Grid.Row="1"
                                      Series="{Binding ProjectprogressSeries}"
                                      LegendPosition="Right"
                                      LegendTextPaint="{Binding LegendTextPaint}"
                                      TooltipTextPaint="{Binding TipTextPaint}">
                        </lvc:PieChart>
                    </Grid>
                </Border>
                <!--#endregion-->


                <!--#region 设备类型汇总 -->
                <Border Grid.ColumnSpan="3"
                        Grid.Row="10">
                    <Grid Margin="0 30 0 20">
                        <Border Margin="0 0 0 10"
                                BorderThickness="0 0 0 1"
                                BorderBrush="#e0e0e0">
                            <TextBlock Text="设备类型汇总"
                                   FontSize="20"
                                   VerticalAlignment="Center"
                                   FontWeight="Bold"
                                   Foreground="#2D5BD5"/>
                        </Border>

                    </Grid>
                </Border>
                <Border Height="398"
                        Grid.Row="11"
                        VerticalAlignment="Top"
                        CornerRadius="15"
                        Background="White">
                    <Grid Margin="20">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="59"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border>
                            <TextBlock Text="项目进度"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                        </Border>

                        <lvc:PieChart Grid.Row="1"
                                      Series="{Binding ProjectprogressSeries}"
                                      LegendPosition="Right"
                                      LegendTextPaint="{Binding LegendTextPaint}"
                                      TooltipTextPaint="{Binding TipTextPaint}">
                        </lvc:PieChart>
                    </Grid>
                </Border>

                <Border Height="398"
                        Grid.Column="2"
                        Grid.Row="11"
                        VerticalAlignment="Top"
                        CornerRadius="15"
                        Background="White">
                    <Grid Margin="20">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="59"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border>
                            <TextBlock Text="人员项目情况"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                        </Border>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <lvc:PieChart Series="{Binding Projectleaderinformation}"
                                          LegendPosition="Top"
                                          LegendTextPaint="{Binding LegendTextPaint}"
                                          TooltipTextPaint="{Binding TipTextPaint}">
                            </lvc:PieChart>

                            <lvc:PieChart Grid.Column="1"
                                          Series="{Binding Projectfollowpoepleinformation}"
                                          LegendPosition="Top"
                                          LegendTextPaint="{Binding LegendTextPaint}"
                                          TooltipTextPaint="{Binding TipTextPaint}">
                            </lvc:PieChart>

                        </Grid>


                    </Grid>
                </Border>
                <!--#endregion-->

            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
