<UserControl x:Class="ProjectCycleManage.View.Charts"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectCycleManage.View"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:vm="clr-namespace:ProjectCycleManage.ViewModel"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:ChartsVM}"
             d:DesignHeight="1000" 
             d:DesignWidth="1625">
    <Grid>
        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="418"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Border Height="398"
                        VerticalAlignment="Top"
                        CornerRadius="15"
                        Background="White">
                    <Grid Margin="20">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="59"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border>
                            <TextBlock Text="年度预算 VS 实际支出"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                        </Border>

                        <lvc:CartesianChart Grid.Row="1"
                                            Series="{Binding Series}"
                                            XAxes="{Binding XAxes}"
                                            LegendPosition="Top"
                                            LegendTextPaint="{Binding LegendTextPaint}"
                                            TooltipTextPaint="{Binding TipTextPaint}">
                        </lvc:CartesianChart>
                    </Grid>
                </Border>

                <Border Height="398"
                        Grid.Column="2"
                        VerticalAlignment="Top"
                        CornerRadius="15"
                        Background="White">
                    <Grid Margin="20">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="59"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border>
                            <TextBlock Text="项目费用"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                        </Border>

                        <lvc:CartesianChart Grid.Row="1"
                                            Series="{Binding ProjectExpendituresseries}"
                                            XAxes="{Binding ProjectExpendituresXAxes}"
                                            LegendPosition="Top"
                                            LegendTextPaint="{Binding LegendTextPaint}"
                                            TooltipTextPaint="{Binding TipTextPaint}"
                                            ZoomMode ="X">
                        </lvc:CartesianChart>
                    </Grid>
                </Border>

                <Border Height="398"
                        Grid.Row="1"
                        VerticalAlignment="Top"
                        CornerRadius="15"
                        Background="White">
                    <Grid Margin="20">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="59"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border>
                            <TextBlock Text="项目进度"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                        </Border>

                        <lvc:PieChart Grid.Row="1"
                                      Series="{Binding ProjectprogressSeries}"
                                      LegendPosition="Right"
                                      LegendTextPaint="{Binding LegendTextPaint}"
                                      TooltipTextPaint="{Binding TipTextPaint}">
                        </lvc:PieChart>
                    </Grid>
                </Border>

                <Border Height="398"
                        Grid.Column="2"
                        Grid.Row="1"
                        VerticalAlignment="Top"
                        CornerRadius="15"
                        Background="White">
                    <Grid Margin="20">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="59"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>

                        <Border>
                            <TextBlock Text="人员项目情况"
                                       FontSize="18"
                                       VerticalAlignment="Center"
                                       FontWeight="Bold"
                                       Foreground="#2D5BD5"/>
                        </Border>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <lvc:PieChart Series="{Binding Projectleaderinformation}"
                                          LegendPosition="Top"
                                          LegendTextPaint="{Binding LegendTextPaint}"
                                          TooltipTextPaint="{Binding TipTextPaint}">
                            </lvc:PieChart>

                            <lvc:PieChart Grid.Column="1"
                                          Series="{Binding Projectfollowpoepleinformation}"
                                          LegendPosition="Top"
                                          LegendTextPaint="{Binding LegendTextPaint}"
                                          TooltipTextPaint="{Binding TipTextPaint}">
                            </lvc:PieChart>

                        </Grid>

                        
                    </Grid>
                </Border>

            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
