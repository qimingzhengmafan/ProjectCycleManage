                                                ToolTip="调整角色" 
                                                Width="50"
                                                Tag="Role" 
                                                Margin="20,0,0,0">
                                            <TextBlock Text="⚙" 
                                                       FontFamily="Segoe UI Symbol"/>
                                        </Button>

                                        <Button Style="{StaticResource IconButton}" 
                                                ToolTip="移除" 
                                                Width="50"
                                                Tag="Remove"
                                                Margin="20,0,0,0">
                                            <TextBlock Text="−" 
                                                       FontFamily="Segoe UI Symbol"
                                                       FontSize="16"/>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- 行3：赵主管 -->
                            <Border BorderBrush="#e0e0e0" BorderThickness="0,0,0,1" Padding="15,12">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="200"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Border Width="36" Height="36" CornerRadius="18" 
                                Background="#e0e0e0" Margin="0,0,10,0">
                                            <TextBlock Text="赵" Foreground="#666" 
                                      FontWeight="Bold" HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"/>
                                        </Border>

                                        <TextBlock Text="赵主管" 
