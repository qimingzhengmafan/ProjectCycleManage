<UserControl x:Class="ProjectCycleManage.View.PersonManagView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectCycleManage.View"
             xmlns:vm="clr-namespace:ProjectCycleManage.ViewModel"
             xmlns:utilities="clr-namespace:ProjectCycleManage.Utilities"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:PersonManagVM}"
             d:DesignHeight="800" 
             d:DesignWidth="1664">
    <UserControl.Resources>
        <!-- 转换器 -->


        <!-- 数据卡片样式 -->
        <Style x:Key="DataCardStyle"
               TargetType="Border">
            <Setter Property="Background"
                    Value="White"/>
            <Setter Property="BorderBrush" 
                    Value="#2D5BD5"/>
            <Setter Property="BorderThickness"
                    Value="5,0,0,5"/>
            <Setter Property="CornerRadius"
                    Value="10"/>
            <Setter Property="Padding" 
                    Value="20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8" 
                                      ShadowDepth="2" 
                                      Opacity="0.05"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 按钮样式 -->
        <Style x:Key="PrimaryButtonStyle"
               TargetType="Button">
            <Setter Property="Background" 
                    Value="#2D5BD5"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="BorderThickness" 
                    Value="0"/>
            <Setter Property="Padding" 
                    Value="12,8"/>
            <Setter Property="FontWeight"
                    Value="Medium"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="Background" 
                                        Value="#1A3A8F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style x:Key="SecondaryButtonStyle" 
               TargetType="Button">
            <Setter Property="Background" 
                    Value="#F5F7FA"/>
            <Setter Property="Foreground" 
                    Value="#666666"/>
            <Setter Property="BorderBrush"
                    Value="#E0E0E0"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="12,8"/>
            <Setter Property="FontWeight" 
                    Value="Medium"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" 
                                     Value="True">
                                <Setter TargetName="border"
                                        Property="Background"
                                        Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 图标按钮样式 -->
        <Style x:Key="IconButtonStyle"
               TargetType="Button">
            <Setter Property="Background" 
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Padding" 
                    Value="4"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 表单输入框样式 -->
        <Style x:Key="FormInputStyle" 
               TargetType="TextBox">
            <Setter Property="Background" 
                    Value="White"/>
            <Setter Property="BorderBrush"
                    Value="#E0E0E0"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="8,6"/>
            <Setter Property="FontSize" 
                    Value="14"/>
            <Setter Property="Foreground"
                    Value="#333333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Padding="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="BorderBrush" 
                                        Value="#2D5BD5"/>
                            </Trigger>
                            <Trigger Property="IsFocused" 
                                     Value="True">
                                <Setter TargetName="border" 
                                        Property="BorderBrush"
                                        Value="#2D5BD5"/>
                                <Setter TargetName="border"
                                        Property="BorderThickness"
                                        Value="2"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 角色标签样式 -->
        <Style x:Key="RoleBadgeStyle" TargetType="Border">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Padding" Value="6,2"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding RoleType}" Value="Manager">
                    <Setter Property="Background" Value="#E3F2FD"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding RoleType}" Value="Leader">
                    <Setter Property="Background" Value="#E8F5E9"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding RoleType}" Value="Member">
                    <Setter Property="Background" Value="#FFF3E0"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <!-- 状态标签样式 -->
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Medium"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsActive}" Value="True">
                    <Setter Property="Foreground" Value="#4CAF50"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsActive}" Value="False">
                    <Setter Property="Foreground" Value="#F44336"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>




        <SolidColorBrush x:Key="PrimaryBlue" Color="#2d5bd6"/>
        <SolidColorBrush x:Key="BackgroundGray" Color="#f5f7fa"/>
        <SolidColorBrush x:Key="BorderGray" Color="#e0e0e0"/>
        <SolidColorBrush x:Key="RoleManagerBg" Color="#e3f2fd"/>
        <SolidColorBrush x:Key="RoleManagerFg" Color="#1976d2"/>
        <SolidColorBrush x:Key="RoleLeaderBg" Color="#e8f5e9"/>
        <SolidColorBrush x:Key="RoleLeaderFg" Color="#388e3c"/>
        <SolidColorBrush x:Key="RoleMemberBg" Color="#fff3e0"/>
        <SolidColorBrush x:Key="RoleMemberFg" Color="#f57c00"/>
        <SolidColorBrush x:Key="StatusActive" Color="#4caf50"/>
        <SolidColorBrush x:Key="StatusInactive" Color="#f44336"/>

        <Style x:Key="ButtonPrimary" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>

        <Style x:Key="ButtonSecondary" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource BackgroundGray}"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderGray}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>



        <!-- #region 表格资源 -->
        <Style x:Key="IconButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="0"
                            CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" 
                                         VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#2d5bd6"/>
                    <Setter Property="Background" Value="#f0f0f0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <!--#endregion 表格资源 -->


    </UserControl.Resources>
    
    <Grid Background="#F5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="52"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 标题栏 -->
        <Border Grid.Row="0"
                Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">
                    <Image Source="/Resources/Images/用户管理.png" 
                           Height="25"/>
                    <TextBlock Text=" 团队成员与角色管理"
                               VerticalAlignment="Center"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="#2D5BD5"/>
                </StackPanel>

                <!-- 返回按钮 -->
                <Button Grid.Column="1"
                        Style="{StaticResource SecondaryButtonStyle}"
                        Background="Transparent"
                        BorderThickness="0"
                        Command="{Binding BackToSettingsCommand}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="←" 
                                   FontSize="16" 
                                   Margin="0,0,8,0"/>
                        <TextBlock Text="返回系统设置" 
                                   FontSize="16"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <Border Grid.Row="1" 
              Background="White"
              Margin="10" 
                CornerRadius="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="96"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 管理头部 -->
                <Border Grid.Row="0" 
                        BorderBrush="#e0e0e0" 
                        BorderThickness="0,0,0,1"
                        Padding="0,25,0,15" 
                        Margin="10,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="团队成员管理" 
                                   FontSize="18" 
                                   FontWeight="SemiBold" 
                                   Foreground="#2d5bd6" 
                                   VerticalAlignment="Center"/>

                        <StackPanel Grid.Column="1" 
                                    Margin="0 0 10 0"
                                    Orientation="Horizontal" >
                            <Button Content="导出名单"
                                    Width="104"
                                    Height="35"
                                    Background="#f5f7fa"
                                    Foreground="#666"
                                    BorderBrush="#e0e0e0" 
                                    BorderThickness="1"
                                    Margin="0 0 10 0"
                                    Padding="8,8,16,8">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center">
                                            <TextBlock Text="" 
                                                       FontFamily="Segoe MDL2 Assets" 
                                                       FontSize="14" 
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="导出名单" 
                                                       Margin="5 0 0 0"
                                                       VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>

                            <Button Content="添加成员"
                                    Height="35"
                                    Width="104"
                                    Background="#2d5bd6" 
                                    Foreground="White" 
                                    BorderThickness="0"
                                    Padding="8,8,16,8">
                                <Button.ContentTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" 
                                                    HorizontalAlignment="Center">
                                            <TextBlock Text=""
                                                       FontFamily="Segoe MDL2 Assets" 
                                                       FontSize="14" 
                                                       VerticalAlignment="Center"/>
                                            <TextBlock Text="添加成员" 
                                                       VerticalAlignment="Center"
                                                       Margin="5 0 0 0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </Button.ContentTemplate>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- 搜索筛选区域 -->
                <Grid Grid.Row="1" 
                      Margin="10,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Border Background="White" 
                            BorderBrush="#e0e0e0" 
                            BorderThickness="1" 
                            CornerRadius="5">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="34"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Grid.Column="0" 
                                     BorderThickness="0" 
                                     Padding="10,10,40,10" 
                                     VerticalContentAlignment="Center"/>
                            <TextBlock Grid.Column="1" 
                                       Text="" 
                                       FontFamily="Segoe MDL2 Assets" 
                                       Foreground="#666" 
                                       VerticalAlignment="Center" 
                                       Margin="10,0,12,0"/>
                        </Grid>
                    </Border>



                    <ComboBox  BorderBrush="#e0e0e0" 
                               Grid.Column="1"
                               MinWidth="150"
                               Padding="10,10,10,10"
                               Margin="10 0 10 0"
                               SelectedIndex="0">
                        <ComboBoxItem Content="所有状态"/>
                        <ComboBoxItem Content="在职"/>
                        <ComboBoxItem Content="离职"/>
                    </ComboBox>
                </Grid>

                <ScrollViewer Grid.Row="2"
                              Margin="10 0 10 0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <!-- 表头 -->
                        <Border Grid.Row="0" Background="#f5f7fa" Height="50">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="200"/>
                                </Grid.ColumnDefinitions>

                                <!-- 成员信息列 -->
                                <TextBlock Grid.Column="0"
                                           Text="成员信息" 
                                           FontSize="16"
                                           FontWeight="SemiBold" 
                                           Foreground="#2d5bd6"
                                           VerticalAlignment="Center" 
                                           Margin="15,0"/>

                                <!-- 状态列 -->
                                <TextBlock Grid.Column="1" 
                                           Text="状态" 
                                           FontSize="16"
                                           FontWeight="SemiBold" 
                                           Foreground="#2d5bd6"
                                           VerticalAlignment="Center"
                                           Margin="0,0,100,0"/>

                                <!-- 操作列 -->
                                <TextBlock Grid.Column="2" 
                                           Text="操作" 
                                           HorizontalAlignment="Center"
                                           FontSize="16"
                                           FontWeight="SemiBold" 
                                           Foreground="#2d5bd6"
                                           VerticalAlignment="Center"
                                           Margin="0,0,15,0"/>
                            </Grid>
                        </Border>

                        <!-- 表格内容 -->
                        <ItemsControl Grid.Row="1"
                                      ItemsSource="{Binding PeopleList}"
                                      Margin="0,0,0,0">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#e0e0e0" 
                                            BorderThickness="0,0,0,1" 
                                            Padding="15,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="200"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- 成员信息 -->
                                            <StackPanel Grid.Column="0" 
                                                        Orientation="Horizontal" 
                                                        VerticalAlignment="Center">
                                                <!-- 头像 -->
                                                <Border Width="36" 
                                                        Height="36" 
                                                        CornerRadius="18" 
                                                        Background="#e0e0e0"
                                                        Margin="0,0,10,0">
                                                    <TextBlock Text="{Binding Surname}" 
                                                               Foreground="#666" 
                                                               FontWeight="Bold" 
                                                               HorizontalAlignment="Center" 
                                                               VerticalAlignment="Center"/>
                                                </Border>

                                                <!-- 姓名和工号 -->
                                                <TextBlock Text="{Binding PeopleName}"
                                                           FontWeight="Medium"
                                                           VerticalAlignment="Center"/>
                                            </StackPanel>

                                            <!-- 状态 -->
                                            <TextBlock Grid.Column="1" 
                                                       Text="{Binding Status}" 
                                                       Foreground="{Binding StatusColor}" 
                                                       FontWeight="Medium" 
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,100,0"/>

                                            <!-- 操作按钮 -->
                                            <StackPanel Grid.Column="2"
                                                        Orientation="Horizontal" 
                                                        HorizontalAlignment="Center">
                                                <Button Style="{StaticResource IconButton}"
                                                        Width="50"
                                                        ToolTip="编辑" 
                                                        Tag="Edit">
                                                    <TextBlock Text="✎"
                                                               FontFamily="Segoe UI Symbol"/>
                                                </Button>
                                                
                                                <Button Style="{StaticResource IconButton}" 
                                                        ToolTip="调整角色" 
                                                        Width="50"
                                                        Tag="Role" 
                                                        Margin="20,0,0,0">
                                                    <TextBlock Text="⚙" 
                                                               FontFamily="Segoe UI Symbol"/>
                                                </Button>
                                                
                                                <Button Style="{StaticResource IconButton}" 
                                                        ToolTip="移除" 
                                                        Width="50"
                                                        Tag="Remove"
                                                        Margin="20,0,0,0">
                                                    <TextBlock Text="−" 
                                                               FontFamily="Segoe UI Symbol"
                                                               FontSize="16"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </ScrollViewer>
                
            </Grid>



        </Border>
    </Grid>
</UserControl>