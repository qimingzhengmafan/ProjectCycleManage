<UserControl x:Class="ProjectCycleManage.View.SettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectCycleManage.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000">
    
    <UserControl.Resources>
        <!-- 卡片样式 -->
        <Style x:Key="SettingCardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="4" Opacity="0.05"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect BlurRadius="16" ShadowDepth="8" Opacity="0.1"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-5"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 按钮样式 -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2D5BD6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1A3A8F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- 标题样式 -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#2D5BD6"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
        
        <!-- 卡片标题样式 -->
        <Style x:Key="CardTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        
        <!-- 状态标签样式 -->
        <Style x:Key="StatusLabelStyle" TargetType="Border">
            <Setter Property="Background" Value="#E3F2FD"/>
            <Setter Property="CornerRadius" Value="20"/>
            <Setter Property="Padding" Value="4,12"/>
        </Style>
        
        <!-- 状态标签文本样式 -->
        <Style x:Key="StatusTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#2196F3"/>
        </Style>
    </UserControl.Resources>
    
    <Grid Background="#F5F7FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- 头部区域 -->
        <Border Grid.Row="0" Background="White" Padding="20" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Column="0" Text="系统设置" Style="{StaticResource SectionTitleStyle}"/>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="40" Height="40" Background="#2D5BD6" CornerRadius="20" 
                            VerticalAlignment="Center" Margin="0,0,10,0">
                        <TextBlock Text="张" Foreground="White" FontWeight="Bold" 
                                   HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="张经理" VerticalAlignment="Center" FontWeight="SemiBold"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- 主内容区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 设置卡片网格 -->
                <WrapPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Stretch" 
                           VerticalAlignment="Top" Margin="0,20,0,0">
                    
                    <!-- 销售额/年度预算卡片 -->
                    <Border Style="{StaticResource SettingCardStyle}" Width="320" Height="220" 
                            Margin="0,0,20,20" BorderThickness="4,0,0,0" BorderBrush="#4CAF50">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 卡片头部 -->
                            <Grid Grid.Row="0" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="销售额/年度预算" Style="{StaticResource CardTitleStyle}"/>
                                
                                <Border Grid.Column="1" Style="{StaticResource StatusLabelStyle}">
                                    <TextBlock Text="已配置" Style="{StaticResource StatusTextStyle}"/>
                                </Border>
                            </Grid>
                            
                            <!-- 卡片内容 -->
                            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,15">
                                <TextBlock Text="• 年度预算总额：500万元" FontSize="14" Margin="0,5"/>
                                <TextBlock Text="• 已完成销售额：320万元" FontSize="14" Margin="0,5"/>
                                <TextBlock Text="• 预算使用率：64%" FontSize="14" Margin="0,5"/>
                                <TextBlock Text="• 剩余预算：180万元" FontSize="14" Margin="0,5"/>
                            </StackPanel>
                            
                            <!-- 操作按钮 -->
                            <Button Grid.Row="2" Content="配置预算" Style="{StaticResource PrimaryButtonStyle}" 
                                    HorizontalAlignment="Right" Width="100"/>
                        </Grid>
                    </Border>
                    
                    <!-- 人员变动卡片 -->
                    <Border Style="{StaticResource SettingCardStyle}" Width="320" Height="220" 
                            Margin="0,0,20,20" BorderThickness="4,0,0,0" BorderBrush="#FF9800">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 卡片头部 -->
                            <Grid Grid.Row="0" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="人员变动" Style="{StaticResource CardTitleStyle}"/>
                                
                                <Border Grid.Column="1" Style="{StaticResource StatusLabelStyle}">
                                    <TextBlock Text="部分配置" Style="{StaticResource StatusTextStyle}"/>
                                </Border>
                            </Grid>
                            
                            <!-- 卡片内容 -->
                            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,15">
                                <TextBlock Text="• 总员工数：45人" FontSize="14" Margin="0,5"/>
                                <TextBlock Text="• 本月新增：3人" FontSize="14" Margin="0,5"/>
                                <TextBlock Text="• 本月离职：1人" FontSize="14" Margin="0,5"/>
                                <TextBlock Text="• 岗位变动：2人" FontSize="14" Margin="0,5"/>
                            </StackPanel>
                            
                            <!-- 操作按钮 -->
                            <Button Grid.Row="2" Content="管理人员" Style="{StaticResource PrimaryButtonStyle}" 
                                    HorizontalAlignment="Right" Width="100"/>
                        </Grid>
                    </Border>
                    
                    <!-- 审批权限修改卡片 -->
                    <Border Style="{StaticResource SettingCardStyle}" Width="320" Height="220" 
                            Margin="0,0,20,20" BorderThickness="4,0,0,0" BorderBrush="#E0E0E0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 卡片头部 -->
                            <Grid Grid.Row="0" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="审批权限修改" Style="{StaticResource CardTitleStyle}"/>
                                
                                <Border Grid.Column="1" Style="{StaticResource StatusLabelStyle}">
                                    <TextBlock Text="0人" Style="{StaticResource StatusTextStyle}"/>
                                </Border>
                            </Grid>
                            
                            <!-- 卡片内容 -->
                            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,15" 
                                        VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="暂无审批人配置" FontSize="14" Foreground="#999" 
                                           HorizontalAlignment="Center" Margin="0,10"/>
                                <TextBlock Text="点击编辑按钮进行配置" FontSize="12" Foreground="#999" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- 操作按钮 -->
                            <Button Grid.Row="2" Content="编辑审批人" Style="{StaticResource PrimaryButtonStyle}" 
                                    HorizontalAlignment="Right" Width="100"/>
                        </Grid>
                    </Border>
                    
                    <!-- 阶段信息文档修改卡片 -->
                    <Border Style="{StaticResource SettingCardStyle}" Width="320" Height="220" 
                            Margin="0,0,20,20" BorderThickness="4,0,0,0" BorderBrush="#E0E0E0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <!-- 卡片头部 -->
                            <Grid Grid.Row="0" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Column="0" Text="阶段信息文档修改" Style="{StaticResource CardTitleStyle}"/>
                                
                                <Border Grid.Column="1" Style="{StaticResource StatusLabelStyle}">
                                    <TextBlock Text="未配置" Style="{StaticResource StatusTextStyle}"/>
                                </Border>
                            </Grid>
                            
                            <!-- 卡片内容 -->
                            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,0,0,15" 
                                        VerticalAlignment="Center" HorizontalAlignment="Center">
                                <TextBlock Text="暂无文档模板配置" FontSize="14" Foreground="#999" 
                                           HorizontalAlignment="Center" Margin="0,10"/>
                                <TextBlock Text="点击管理按钮进行配置" FontSize="12" Foreground="#999" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                            
                            <!-- 操作按钮 -->
                            <Button Grid.Row="2" Content="管理文档" Style="{StaticResource PrimaryButtonStyle}" 
                                    HorizontalAlignment="Right" Width="100"/>
                        </Grid>
                    </Border>
                </WrapPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
