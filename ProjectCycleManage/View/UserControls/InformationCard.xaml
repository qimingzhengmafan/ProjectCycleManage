<UserControl x:Class="ProjectCycleManage.View.UserControls.InformationCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectCycleManage.View.UserControls"
             mc:Ignorable="d"
             Width="250"
             Height="94"
             Tag="">
    <Grid>
        <Border CornerRadius="15"
                Background="White">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="36"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Width="59"
                        Height="20"
                        CornerRadius="3"
                        Background="#E3F2FD"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Margin="14 0 0 0">
                    <TextBlock Text="文档 - OA"
                               FontSize="12"
                               Foreground="#2196F3"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <!--文档-->
                <Grid Grid.Row="1">
                    <Grid Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="设备项目问题改善"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="14 0 0 0"/>

                            <CheckBox VerticalAlignment="Center"
                                      Margin="42 0 0 0"
                                      Content="确认"/>
                        </StackPanel>
                    </Grid>

                    <!-- 信息-项目负责人/项目跟进人 -->
                    <Grid Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="跟进人"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="14 0 0 0"/>
                            <ComboBox VerticalAlignment="Center"
                                      Width="125"
                                      Height="25"
                                      FontSize="14"
                                      Margin="20 0 0 0"
                                      SelectedIndex="0"
                                      VerticalContentAlignment="Center">
                                <ComboBoxItem Content="裴涛"/>
                                <ComboBoxItem Content="江琛"/>
                            </ComboBox>

                            <Button Height="20"
                                    Width="20"
                                    Margin="10 0 0 0"
                                    Background="Transparent"
                                    BorderThickness="0">
                                <Button.Content>
                                    <Image Source="/Resources/Images/edit-编辑.png" />

                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!--信息-填写内容-->
                    <Grid Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="预算花费"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="14 0 0 0"/>
                            <TextBox VerticalAlignment="Center"
                                     Width="125"
                                     Height="25"
                                     Margin="20 0 0 0"
                                     FontSize="14"
                                     BorderThickness=" 0 0 0 1"/>

                            <Button Height="20"
                                    Width="20"
                                    Margin="10 0 0 0"
                                    Background="Transparent"
                                    BorderThickness="0">
                                <Button.Content>
                                    <Image Source="/Resources/Images/edit-编辑.png" />
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!--信息-填写内容-->
                    <Grid Visibility="Visible">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="申请单号"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="14 0 0 0"/>
                            <TextBox VerticalAlignment="Center"
                                     Width="125"
                                     Text="POREQ224813"
                                     HorizontalContentAlignment="Left"
                                     VerticalContentAlignment="Center"
                                     Height="25"
                                     Margin="20 0 0 0"
                                     FontSize="14"
                                     BorderThickness=" 0 0 0 1"/>

                            <Button Height="20"
                                    Width="20"
                                    Margin="10 0 0 0"
                                    Background="Transparent"
                                    BorderThickness="0">
                                <Button.Content>
                                    <Image Source="/Resources/Images/edit-编辑.png" />
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
