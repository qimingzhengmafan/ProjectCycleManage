<UserControl x:Class="ProjectCycleManage.View.UserControls.InformationCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectCycleManage.View.UserControls"
             mc:Ignorable="d"
             Width="300"
             Height="94"
             Tag="{}"
             x:Name="InformationCardUC">
    <Grid DataContext="{Binding ElementName=InformationCardUC}"
          Tag="{Binding InformationTag}"
          IsEnabled="{Binding CardIsEnable}">
        <Border CornerRadius="15"
                Background="White">
            <Border.Effect>
                <DropShadowEffect Color="Black" 
                                  Direction="2" 
                                  ShadowDepth="2" 
                                  Opacity="0.3" 
                                  BlurRadius="2"/>
            </Border.Effect>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="36"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Border Width="70"
                        Height="20"
                        CornerRadius="3"
                        Background="#E3F2FD"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Margin="14 0 0 0">
                    <TextBlock Text="{Binding InformationTypes}"
                               FontSize="12"
                               Foreground="#2196F3"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>
                
                <Image Source="/Resources/Images/锁.png"
                       Height="16"
                       Width="16"
                       Margin="0 0 14 0"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       Visibility="{Binding LockVisib}"/>


                
                <Grid Grid.Row="1">

                    <!--文档-->
                    <Grid Visibility="{Binding FileVisib}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding FileName}"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="14 0 0 0"/>

                            <CheckBox VerticalAlignment="Center"
                                      IsChecked="{Binding FileIsExist}"
                                      Command="{Binding CheckCommand}"
                                      Margin="42 0 0 0"
                                      Content="确认"/>
                        </StackPanel>
                    </Grid>

                    <!-- 信息-下拉框-项目负责人/项目跟进人 -->
                    <Grid Visibility="{Binding Infor_People_Visib}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Infor_Prople}"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="14 0 0 0"/>
                            <ComboBox VerticalAlignment="Center"
                                      Width="125"
                                      Height="25"
                                      FontSize="14"
                                      ItemsSource="{Binding Infor_People_Ob}"
                                      DisplayMemberPath="PeopleName"
                                      SelectedValuePath="PeopleId"
                                      SelectedItem="{Binding Infor_Sele_People, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      Margin="20 0 0 0"
                                      VerticalContentAlignment="Center">
                            </ComboBox>

                            <Button Height="20"
                                    Width="20"
                                    Margin="10 0 0 0"
                                    Background="Transparent"
                                    Command="{Binding Infor_People_BtnCom}"
                                    BorderThickness="0">
                                <Button.Content>
                                    <Image Source="/Resources/Images/edit-编辑.png" />

                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- 信息-下拉框-设备类型下拉框 -->
                    <Grid Visibility="{Binding equipmenttype}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Infor_Equipmenttype}"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="14 0 0 0"/>
                            <ComboBox VerticalAlignment="Center"
                                      Width="125"
                                      Height="25"
                                      FontSize="14"
                                      ItemsSource="{Binding Infor_Equipments_Ob}"
                                      DisplayMemberPath="EquipmentName"
                                      SelectedValuePath="EquipmentTypeId"
                                      SelectedItem="{Binding Infor_Sele_Equipment, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      Margin="20 0 0 0"
                                      VerticalContentAlignment="Center">
                            </ComboBox>

                            <Button Height="20"
                                    Width="20"
                                    Margin="10 0 0 0"
                                    Background="Transparent"
                                    Command="{Binding Inofor_Equipment_BtnCom}"
                                    BorderThickness="0">
                                <Button.Content>
                                    <Image Source="/Resources/Images/edit-编辑.png" />

                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- 信息-下拉框-项目类型下拉框 -->
                    <Grid Visibility="{Binding Infor_Types_Visib}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Infor_Types}"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="14 0 0 0"/>
                            <ComboBox VerticalAlignment="Center"
                                      Width="125"
                                      Height="25"
                                      FontSize="14"
                                      ItemsSource="{Binding Infor_Types_Ob}"
                                      DisplayMemberPath="TypeName"
                                      SelectedValuePath="TypeId"
                                      SelectedItem="{Binding Infor_Sele_Types, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      Margin="20 0 0 0"
                                      VerticalContentAlignment="Center">
                            </ComboBox>

                            <Button Height="20"
                                    Width="20"
                                    Margin="10 0 0 0"
                                    Background="Transparent"
                                    Command="{Binding Infor_Types_Btncom}"
                                    BorderThickness="0">
                                <Button.Content>
                                    <Image Source="/Resources/Images/edit-编辑.png" />

                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- 信息-下拉框-阶段下拉框 -->
                    <Grid Visibility="{Binding Infor_ProjectStage_Visib}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Infor_ProjectsStage}"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="14 0 0 0"/>
                            <ComboBox VerticalAlignment="Center"
                                      Width="125"
                                      Height="25"
                                      FontSize="14"
                                      ItemsSource="{Binding Infor_ProjectStage_Ob}"
                                      DisplayMemberPath="ProjectStageName"
                                      SelectedValuePath="ProjectStageId"
                                      SelectedItem="{Binding Infor_Sele_ProjectStage, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      Margin="20 0 0 0"
                                      VerticalContentAlignment="Center">
                            </ComboBox>

                            <Button Height="20"
                                    Width="20"
                                    Margin="10 0 0 0"
                                    Background="Transparent"
                                    Command="{Binding Infor_ProjectStage_Btncom}"
                                    BorderThickness="0">
                                <Button.Content>
                                    <Image Source="/Resources/Images/edit-编辑.png" />

                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- 信息-下拉框-项目阶段状态下拉框 -->
                    <Grid Visibility="{Binding Infor_ProjectPhase_Visib}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Infor_ProjectPha}"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="14 0 0 0"/>
                            <ComboBox VerticalAlignment="Center"
                                      Width="125"
                                      Height="25"
                                      FontSize="14"
                                      ItemsSource="{Binding Infor_ProjectPha_Ob}"
                                      DisplayMemberPath="ProjectPhaseStatusName"
                                      SelectedValuePath="ProjectPhaseStatusId"
                                      SelectedItem="{Binding Infor_Sele_ProjectPha, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                      Margin="20 0 0 0"
                                      VerticalContentAlignment="Center">
                            </ComboBox>

                            <Button Height="20"
                                    Width="20"
                                    Margin="10 0 0 0"
                                    Background="Transparent"
                                    Command="{Binding Infor_Project_BtnCom}"
                                    BorderThickness="0">
                                <Button.Content>
                                    <Image Source="/Resources/Images/edit-编辑.png" />

                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!--信息-填写内容-->
                    <Grid Visibility="{Binding Infor_Text_Visib}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Infor_Text_In}"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="14 0 0 0"/>
                            <TextBox VerticalAlignment="Center"
                                     Text="{Binding Infor_Text_Write ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                     Width="125"
                                     Height="25"
                                     Margin="20 0 0 0"
                                     FontSize="14"
                                     BorderThickness=" 0 0 0 1"/>

                            <Button Height="20"
                                    Width="20"
                                    Margin="10 0 0 0"
                                    Background="Transparent"
                                    Command="{Binding Infor_Text_BtnCom}"
                                    BorderThickness="0">
                                <Button.Content>
                                    <Image Source="/Resources/Images/edit-编辑.png" />
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!--文档-OA-->
                    <Grid Visibility="{Binding File_OA_Visib}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding File_OA_InData}"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="14 0 0 0"/>
                            <TextBox VerticalAlignment="Center"
                                     Width="125"
                                     Text="{Binding File_OA_WriteData}"
                                     HorizontalContentAlignment="Left"
                                     VerticalContentAlignment="Center"
                                     Height="25"
                                     Margin="20 0 0 0"
                                     FontSize="14"
                                     BorderThickness=" 0 0 0 1"/>

                            <Button Height="20"
                                    Width="20"
                                    Margin="10 0 0 0"
                                    Background="Transparent"
                                    Command="{Binding File_OA_BtnCommand}"
                                    BorderThickness="0">
                                <Button.Content>
                                    <Image Source="/Resources/Images/edit-编辑.png" />
                                </Button.Content>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!--信息 - 日期-->
                    <Grid Visibility="{Binding Infor_Date}">

                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Infor_Data_Text_In}"
                                       FontSize="14"
                                       VerticalAlignment="Center"
                                       Margin="14 0 0 0"/>
                            <DatePicker BorderThickness=" 0 0 0 1"
                                        HorizontalAlignment="Left"
                                        SelectedDate="{Binding Infor_Date_SelectTime,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                        Width="120"
                                        FontSize="14"
                                        Height="20"
                                        Margin="20 0 0 0"/>
                            <Button Height="20"
                                    Width="20"
                                    Margin="10 0 0 0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding Infor_Date_Btn_Com}">
                                <Button.Content>
                                    <Image Source="/Resources/Images/edit-编辑.png" />
                                </Button.Content>
                            </Button>
                        </StackPanel>

                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
