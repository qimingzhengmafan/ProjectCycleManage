<Window x:Class="ProjectCycleManage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectCycleManage"
        xmlns:Menu="clr-namespace:Page_Navigation_App.Utilities"
        xmlns:view="clr-namespace:ProjectCycleManage.View"
        xmlns:vm="clr-namespace:ProjectCycleManage.ViewModel"
        WindowState="Maximized"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="1080" 
        Width="1920">
    <!--<Window.DataContext>
        <vm:MainVM/>
    </Window.DataContext>-->
    
    <Grid Background="#f5f7fa">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Background="White">
            <Border CornerRadius="0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF1A3A8F"/>
                        <GradientStop Color="#FF2D5BD6" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="65"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid>
                        <Border BorderThickness="0 0 0 0.2"
                                BorderBrush="#BBBBBB">
                            <Label Content="项目全周期管理"
                                   VerticalContentAlignment="Center"
                                   HorizontalContentAlignment="Center"
                                   Foreground="White"
                                   FontSize="25"
                                   FontWeight="Bold"
                                   Margin="30 0 0 0"/>
                        </Border>
                    </Grid>

                    <Grid HorizontalAlignment="Left">
                        <Image Source="/Resources/Images/项目管理.png" 
                               Height="23"
                               Margin="20 0 0 0"/>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Border Grid.Row="1"
                                Margin="0 25 0 0"
                                BorderThickness="0.5 0 0.5 0.5"
                                BorderBrush="#707070"
                                CornerRadius="0 0 5 0">
                            <StackPanel>

                                <Menu:Btn Style="{StaticResource BtnStyle}"
                                          IsChecked="True"
                                          BorderThickness="1"
                                          Command="{Binding}">
                                    <Grid>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="30 0 0 0">
                                            <Image Source="/Resources/Images/home-copy-copy.png" 
                                                   Width="18"
                                                   Height="18"/>
                                            <Label Content="项目总览"
                                                   VerticalContentAlignment="Center"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   FontFamily="YouYuan"
                                                   Foreground="White"
                                                   Margin="5 0 0 0"/>
                                        </StackPanel>
                                        
                                    </Grid>
                                </Menu:Btn>

                                <Menu:Btn Style="{StaticResource BtnStyle}"
                                          BorderThickness="1"
                                          Command="{Binding MaintenanceOverViewICommand}">
                                    <Grid>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="30 0 0 0">
                                            <Image Source="/Resources/Images/任务.png" 
                                                   Width="18"
                                                   Height="18"/>
                                            <Label Content="我的任务"
                                                   VerticalContentAlignment="Center"
                                                   FontSize="16"
                                                   FontFamily="YouYuan"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   Margin="5 0 0 0"/>
                                        </StackPanel>
                                    </Grid>
                                </Menu:Btn>

                                <Menu:Btn Style="{StaticResource BtnStyle}"
                                          Command="{Binding AddViewICommand}">
                                    <Grid>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="30 0 0 0">
                                            <Image Source="/Resources/Images/文档.png" 
                                                   Width="18"
                                                   Height="18"/>
                                            <Label Content="文档中心"
                                                   VerticalContentAlignment="Center"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   FontFamily="YouYuan"
                                                   Foreground="White"
                                                   Margin="5 0 0 0"/>
                                        </StackPanel>

                                    </Grid>
                                </Menu:Btn>

                                <Menu:Btn Style="{StaticResource BtnStyle}"
                                          Command="{Binding TableViewICommand}">
                                    <Grid>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="30 0 0 0">
                                            <Image Source="/Resources/Images/分析.png" 
                                                   Width="18"
                                                   Height="18"/>
                                            <Label Content="数据分析"
                                                   FontFamily="YouYuan"
                                                   VerticalContentAlignment="Center"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   Margin="5 0 0 0"/>
                                        </StackPanel>

                                    </Grid>
                                </Menu:Btn>

                                <Menu:Btn Style="{StaticResource BtnStyle}"
                                          Command="{Binding SettingViewICommand}">
                                    <Grid>
                                        <StackPanel Orientation="Horizontal"
                                                    Margin="30 0 0 0">
                                            <Image Source="/Resources/Images/设置.png" 
                                                   Width="18"
                                                   Height="18"/>
                                            <Label Content="系统设置"
                                                   FontFamily="YouYuan"
                                                   VerticalContentAlignment="Center"
                                                   FontSize="16"
                                                   FontWeight="Bold"
                                                   Foreground="White"
                                                   Margin="5 0 0 0"/>
                                        </StackPanel>

                                    </Grid>
                                </Menu:Btn>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Column="1">
            <view:Overview DataContext="{Binding OverView}"/>
        </Grid>
    </Grid>
</Window>
