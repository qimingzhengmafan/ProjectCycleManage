<UserControl x:Class="ProjectManagement.View.ProjectDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectManagement.View"
             xmlns:vm="clr-namespace:ProjectManagement.ViewModel"
             xmlns:draw="clr-namespace:DrawerTest;assembly=DrawerTest"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:ProjectDetailsVM}"
             d:DesignHeight="1800" d:DesignWidth="900">
    <Grid>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="56"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Height="56"
                      VerticalAlignment="Top">
                    <Border BorderBrush="#BBBBBB"
                            BorderThickness=" 0 0 0 0.5">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="项目详情"
                                   FontSize="30"
                                   VerticalContentAlignment="Center"
                                   FontWeight="Bold"
                                   Margin="30 0 0 0"/>

                            <draw:ProjectProgressInfo Width="300"
                                                        Height="20"
                                                        HorizontalContentAlignment="Right"
                                                        ContentText="已完成（2025/10/1）"
                                                        BeltColor="#F0FDF4"
                                                        TextColor="#10B981"
                                                        Margin="500 0 0 0"/>
                        </StackPanel>
                    </Border>
                </Grid>

                <Grid Grid.Row="1">
                    <ScrollViewer>
                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="481"/>
                                <RowDefinition Height="481"/>
                                <RowDefinition Height="481"/>
                                <RowDefinition Height="227"/>

                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border BorderBrush="#BBBBBB"
                                    BorderThickness=" 0 0 0 0.5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="100"/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <Image Source="/Resources/Images/图标 1@1x.png"
                                               Height="35"
                                               Width="35"
                                               Margin="30 0 0 0"/>
                                        <Label Content="基本信息"
                                               VerticalContentAlignment="Bottom"
                                               FontSize="30"
                                               FontWeight="Bold"/>
                                        <Image Source="/Resources/Images/流程.png"
                                               Height="35"
                                               Width="35"
                                               Margin="600 0 0 0"/>
                                    </StackPanel>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Grid>
                                            <StackPanel Height="125"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="项目名称"
                                                           Style="{StaticResource OptionsStyle}"/>
                                                    <Label Content="*"
                                                           Style="{StaticResource OptionsStyle}"
                                                           Foreground="Red"
                                                           FontWeight="Bold"
                                                           Margin="0"/>
                                                </StackPanel>
                                                <TextBox Height="50"
                                                         FontSize="20"
                                                         Text="{Binding ProjectName}"
                                                         VerticalContentAlignment="Center"
                                                         HorizontalAlignment="Left"
                                                         Width="350"
                                                         Margin="30 0 0 0"/>

                                            </StackPanel>
                                        </Grid>

                                        <Grid Grid.Column="1">
                                            <StackPanel VerticalAlignment="Top">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="序号"
                                                           Style="{StaticResource OptionsStyle}"/>
                                                    <Label Content="*"
                                                           Style="{StaticResource OptionsStyle}"
                                                           Foreground="Red"
                                                           FontWeight="Bold"
                                                           Margin="0"/>
                                                </StackPanel>
                                                <TextBox Height="50"
                                                         Text="{Binding Projectsid}"
                                                         IsReadOnly="True"
                                                         IsEnabled="False"
                                                         FontSize="20"
                                                         VerticalContentAlignment="Center"
                                                         HorizontalAlignment="Left"
                                                         Width="350"
                                                         Margin="30 0 0 0"/>

                                            </StackPanel>
                                        </Grid>

                                        
                                    </Grid>

                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                       

                                        <Grid Grid.Column="1">
                                            <StackPanel VerticalAlignment="Top">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="项目编号"
                                                           Style="{StaticResource OptionsStyle}"/>
                                                    <Label Content=""
                                                           Style="{StaticResource OptionsStyle}"
                                                           Foreground="Red"
                                                           FontWeight="Bold"
                                                           Margin="0"/>
                                                </StackPanel>
                                                <TextBox Height="50"
                                                         FontSize="20"
                                                         Text="{Binding ProjectIdentifyingNumber}"
                                                         VerticalContentAlignment="Center"
                                                         HorizontalAlignment="Left"
                                                         Width="350"
                                                         Margin="30 0 0 0"/>

                                            </StackPanel>
                                        </Grid>

                                        <Grid Grid.Column="0">
                                            <StackPanel Margin="0 0 30 0"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="年份"
                                                           Style="{StaticResource OptionsStyle}"/>
                                                </StackPanel>
                                                <TextBox Height="50"
                                                         FontSize="20"
                                                         IsReadOnly="True"
                                                         IsEnabled="False"
                                                         Text="{Binding Year}"
                                                         VerticalContentAlignment="Center"
                                                         HorizontalAlignment="Left"
                                                         Width="350"
                                                         Margin="30 0 0 0"/>

                                            </StackPanel>
                                        </Grid>

                                    </Grid>

                                    <Grid Grid.Row="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Grid>
                                            <StackPanel Height="125"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="采购月份"
                                                           Style="{StaticResource OptionsStyle}"/>
                                                    <Label Content=""
                                                            Style="{StaticResource OptionsStyle}"
                                                            Foreground="Red"
                                                            FontWeight="Bold"
                                                            Margin="0"/>
                                                </StackPanel>
                                                <TextBox Height="50"
                                                         FontSize="20"
                                                         IsReadOnly="True"
                                                         IsEnabled="False"
                                                         Text="{Binding ProcurementMonth}"
                                                         VerticalContentAlignment="Center"
                                                         HorizontalAlignment="Left"
                                                         Width="350"
                                                         Margin="30 0 0 0"/>

                                            </StackPanel>
                                        </Grid>

                                        <Grid Grid.Column="2">
                                            <StackPanel Margin="0 0 30 0"
                                                         VerticalAlignment="Top">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="资产编号"
                                                           Style="{StaticResource OptionsStyle}"/>
                                                </StackPanel>
                                                <TextBox Height="50"
                                                         FontSize="20"
                                                         Text="{Binding Assetnumber}"
                                                         VerticalContentAlignment="Center"
                                                         HorizontalAlignment="Left"
                                                         Width="350"
                                                         Margin="30 0 0 0"/>

                                            </StackPanel>
                                        </Grid>


                                    </Grid>
                                </Grid>
                            </Border>

                            <Border Grid.Row="1"
                                    BorderBrush="#BBBBBB"
                                    BorderThickness=" 0 0 0 0.5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="100"/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <Image Source="/Resources/Images/详情.png"
                                               Height="35"
                                               Width="35"
                                               Margin="30 0 0 0"/>
                                        <Label Content="项目详情"
                                               VerticalContentAlignment="Bottom"
                                               FontSize="30"
                                               FontWeight="Bold"/>
                                    </StackPanel>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Grid>
                                            <StackPanel Height="125"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="项目类型"
                                                           Style="{StaticResource OptionsStyle}"/>
                                                    <Label Content="*"
                                                           Style="{StaticResource OptionsStyle}"
                                                           Foreground="Red"
                                                           FontWeight="Bold"
                                                           Margin="0"/>
                                                </StackPanel>
                                                <ComboBox Height="50"
                                                          FontSize="20"
                                                          ItemsSource="{Binding Types}"
                                                          DisplayMemberPath="TypeName"
                                                          SelectedValuePath="TypeId"
                                                          SelectedItem="{Binding SelectedType, Mode=TwoWay}"
                                                          VerticalContentAlignment="Center"
                                                          HorizontalAlignment="Left"
                                                          Width="350"
                                                          Margin="30 0 0 0">
                                            
                                                </ComboBox>

                                            </StackPanel>
                                        </Grid>

                                        <Grid Grid.Column="1">
                                            <StackPanel VerticalAlignment="Top">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="设备类型"
                                                           Style="{StaticResource OptionsStyle}"/>
                                                    <Label Content="*"
                                                           Style="{StaticResource OptionsStyle}"
                                                           Foreground="Red"
                                                           FontWeight="Bold"
                                                           Margin="0"/>
                                                </StackPanel>
                                                <ComboBox Height="50"
                                                          FontSize="20"
                                                          ItemsSource="{Binding EquipmentTypes}"
                                                          DisplayMemberPath="EquipmentName"
                                                          SelectedValuePath="EquipmentTypeId"
                                                          SelectedItem="{Binding SelectedEquipmentType, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                                          VerticalContentAlignment="Center"
                                                          HorizontalAlignment="Left"
                                                          Width="350"
                                                          Margin="30 0 0 0"/>

                                            </StackPanel>
                                        </Grid>

                                        
                                    </Grid>

                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0">
                                            <StackPanel Margin="0 0 30 0"
                                                        VerticalAlignment="Top">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="责任人"
                                                           Style="{StaticResource OptionsStyle}"/>

                                                </StackPanel>
                                                <ComboBox Height="50"
                                                          FontSize="20"
                                                          ItemsSource="{Binding Employees}"
                                                          DisplayMemberPath="PeopleName"
                                                          SelectedValuePath="PeopleId"
                                                          SelectedItem="{Binding SelectedEmployee, Mode=TwoWay}"
                                                          VerticalContentAlignment="Center"
                                                          HorizontalAlignment="Left"
                                                          Width="350"
                                                          Margin="30 0 0 0"/>

                                            </StackPanel>
                                        </Grid>

                                        <Grid Grid.Column="1">
                                            <StackPanel VerticalAlignment="Top">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="跟进人"
                                                           Style="{StaticResource OptionsStyle}"/>
                                                    <Label Content=""
                                                           Style="{StaticResource OptionsStyle}"
                                                           Foreground="Red"
                                                           FontWeight="Bold"
                                                           Margin="0"/>
                                                </StackPanel>
                                                <ComboBox Height="50"
                                                          FontSize="20"
                                                          ItemsSource="{Binding Employees}"
                                                          DisplayMemberPath="PeopleName"
                                                          SelectedValuePath="PeopleId"
                                                          SelectedItem="{Binding SelectedFollowEmployee, Mode=TwoWay}"
                                                          VerticalContentAlignment="Center"
                                                          HorizontalAlignment="Left"
                                                          Width="350"
                                                          Margin="30 0 0 0"/>

                                            </StackPanel>
                                        </Grid>

                                        
                                    </Grid>

                                    <Grid Grid.Row="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Grid>
                                            <StackPanel Height="125"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="设备名称"
                                                           Style="{StaticResource OptionsStyle}"/>
                                                    <Label Content=""
                                                           Style="{StaticResource OptionsStyle}"
                                                           Foreground="Red"
                                                           FontWeight="Bold"
                                                           Margin="0"/>
                                                </StackPanel>
                                                <TextBox Height="50"
                                                         FontSize="20"
                                                         Text="{Binding Equipmentname}"
                                                         VerticalContentAlignment="Center"
                                                         HorizontalAlignment="Left"
                                                         Width="350"
                                                         Margin="30 0 0 0"/>

                                            </StackPanel>
                                        </Grid>

                                        <Grid Grid.Column="1">
                                            <StackPanel Margin="0 0 30 0"
                                                        VerticalAlignment="Top">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="备注"
                                                           Style="{StaticResource OptionsStyle}"/>
                                                </StackPanel>
                                                <TextBox Height="50"
                                                         FontSize="20"
                                                         Text="{Binding Remarkks}"
                                                         VerticalContentAlignment="Center"
                                                         HorizontalAlignment="Left"
                                                         Width="350"
                                                         Margin="30 0 0 0"/>

                                            </StackPanel>
                                        </Grid>

                                    </Grid>
                                </Grid>
                            </Border>

                            <Border Grid.Row="2"
                                    BorderBrush="#BBBBBB"
                                    BorderThickness=" 0 0 0 0.5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="100"/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal"
                                                VerticalAlignment="Center">
                                        <Image Source="/Resources/Images/时间安排.png"
                                               Height="40"
                                               Width="40"
                                               Margin="30 0 0 0"/>
                                        <Label Content="时间安排"
                                               VerticalContentAlignment="Bottom"
                                               FontSize="30"
                                               FontWeight="Bold"/>
                                    </StackPanel>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Grid>
                                            <StackPanel Height="125"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="开始时间"
                                                           Style="{StaticResource OptionsStyle}"/>
                                                    <Label Content="*"
                                                           Style="{StaticResource OptionsStyle}"
                                                           Foreground="Red"
                                                           FontWeight="Bold"
                                                           Margin="0"/>
                                                </StackPanel>
                                                <DatePicker Style="{StaticResource LargeDatePickerStyle}"
                                                            HorizontalAlignment="Left"
                                                            SelectedDate="{Binding StartTime}"
                                                            Width="350"
                                                            Margin="30 0 0 0"
                                                            FontSize="20"
                                                            Height="50"/>

                                            </StackPanel>
                                        </Grid>

                                        <Grid Grid.Column="1">
                                            <StackPanel VerticalAlignment="Top">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="预计完成时间"
                                                           Style="{StaticResource OptionsStyle}"/>
                                                    <Label Content="*"
                                                           Style="{StaticResource OptionsStyle}"
                                                           Foreground="Red"
                                                           FontWeight="Bold"
                                                           Margin="0"/>

                                                </StackPanel>
                                                <DatePicker Style="{StaticResource LargeDatePickerStyle}"
                                                            HorizontalAlignment="Left"
                                                            SelectedDate="{Binding FinishTime}"
                                                            Width="350"
                                                            Margin="30 0 0 0"
                                                            FontSize="20"
                                                            Height="50"/>

                                            </StackPanel>
                                        </Grid>

                                        
                                    </Grid>

                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Grid>
                                            <StackPanel Height="125"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="项目周期"
                                                           Style="{StaticResource OptionsStyle}"/>
                                                    <Label Content=""
                                                           Style="{StaticResource OptionsStyle}"
                                                           Foreground="Red"
                                                           FontWeight="Bold"
                                                           Margin="0"/>
                                                </StackPanel>
                                                <TextBox Height="50"
                                                         FontSize="20"
                                                         IsEnabled="False"
                                                         VerticalContentAlignment="Center"
                                                         IsReadOnly="True"
                                                         HorizontalAlignment="Left"
                                                         Width="350"
                                                         Margin="30 0 0 0"/>

                                            </StackPanel>
                                        </Grid>

                                        <Grid Grid.Column="1">
                                            <StackPanel Margin="0 0 30 0"
                                                        VerticalAlignment="Top">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="阶段"
                                                           Style="{StaticResource OptionsStyle}"/>
                                                </StackPanel>
                                                <ComboBox Height="50"
                                                          FontSize="20"
                                                          ItemsSource="{Binding Projectstage}"
                                                          DisplayMemberPath="ProjectStageName"
                                                          SelectedValuePath="ProjectStageId"
                                                          SelectedItem="{Binding Selectedprojectstage, Mode=TwoWay}"
                                                          VerticalContentAlignment="Center"
                                                          HorizontalAlignment="Left"
                                                          Width="350"
                                                          Margin="30 0 0 0"/>

                                            </StackPanel>
                                        </Grid>
                                        
                                        

                                    </Grid>
                                    
                                    <Grid Grid.Row="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <Grid Grid.Column="0">
                                            <StackPanel Margin="0 0 30 0"
                                                        VerticalAlignment="Top">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="阶段"
                                                           Style="{StaticResource OptionsStyle}"/>
                                                </StackPanel>
                                                <ComboBox Height="50"
                                                          FontSize="20"
                                                          ItemsSource="{Binding Projectphasestatus}"
                                                          DisplayMemberPath="ProjectPhaseStatusName"
                                                          SelectedValuePath="ProjectPhaseStatusId"
                                                          SelectedItem="{Binding Selectedprojectphasestatus, Mode=TwoWay}"
                                                          VerticalContentAlignment="Center"
                                                          HorizontalAlignment="Left"
                                                          Width="350"
                                                          Margin="30 0 0 0"/>

                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Border>

                            <Border Grid.Row="3"
                                         BorderBrush="#BBBBBB"
                                         BorderThickness=" 0 0 0 0.5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="100"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal"
                                                 VerticalAlignment="Center">
                                        <Image Source="/Resources/Images/费用.png"
                                               Height="35"
                                               Width="35"
                                               Margin="30 0 0 0"/>
                                        <Label Content="费用"
                                               VerticalContentAlignment="Bottom"
                                               FontSize="30"
                                               FontWeight="Bold"/>
                                    </StackPanel>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Grid>
                                            <StackPanel Height="125"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Top">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="项目预算"
                                                           Style="{StaticResource OptionsStyle}"/>
                                                    <Label Content="*"
                                                           Style="{StaticResource OptionsStyle}"
                                                           Foreground="Red"
                                                           FontWeight="Bold"
                                                           Margin="0"/>
                                                </StackPanel>
                                                <TextBox Height="50"
                                                         FontSize="20"
                                                         Text="{Binding Budget}"
                                                         VerticalContentAlignment="Center"
                                                         HorizontalAlignment="Left"
                                                         Width="350"
                                                         Margin="30 0 0 0"/>

                                            </StackPanel>
                                        </Grid>

                                        <Grid Grid.Column="1">
                                            <StackPanel VerticalAlignment="Top">
                                                <StackPanel Orientation="Horizontal">
                                                    <Label Content="实际花费"
                                                           Style="{StaticResource OptionsStyle}"/>
                                                    <Label Content="*"
                                                           Style="{StaticResource OptionsStyle}"
                                                           Foreground="Red"
                                                           FontWeight="Bold"
                                                           Margin="0"/>
                                                </StackPanel>
                                                <TextBox Height="50"
                                                         FontSize="20"
                                                         Text="{Binding ActualExpenditure}"
                                                         VerticalContentAlignment="Center"
                                                         HorizontalAlignment="Left"
                                                         Width="350"
                                                         Margin="30 0 0 0"/>

                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Border>

                            <Border Grid.Row="4">
                                <Button Width="123"
                                        Background="#1296DB"
                                        BorderThickness="0"
                                        Content="保存修改"
                                        FontSize="20"
                                        Foreground="White"
                                        Margin="600 0 0 0"
                                        Height="61"
                                        Command="{Binding SaveChangesCommand}"/>
                            </Border>

                        </Grid>



                    </ScrollViewer>
                </Grid>
            </Grid>
        <!--</ScrollViewer>-->
    </Grid>
</UserControl>
