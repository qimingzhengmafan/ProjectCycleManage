<UserControl x:Class="ProjectManagement.View.Overview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectManagement.View"
             xmlns:uc="clr-namespace:ProjectManagement.View.UserControls"
             xmlns:vm="clr-namespace:ProjectManagement.ViewModel"
             xmlns:slc="clr-namespace:ScrollControlProject;assembly=ScrollControlProject"
             xmlns:view="clr-namespace:ProjectManagement.View"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:OverviewVM}"
             d:DesignHeight="700"
             d:DesignWidth="1252">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="147"/>
            <ColumnDefinition Width="147"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0"
              Grid.ColumnSpan="2"
              VerticalAlignment="Top"
              Height="110"
              HorizontalAlignment="Center">
            <Button Style="{StaticResource HeadPortrait}"
                    Command="{Binding VisibilityICommand_OverView}"
                    Margin="0 10 0 0"
                    VerticalAlignment="Top"/>
            
            <Label Content="{Binding Department}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"/>
        </Grid>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="99"/>
                <RowDefinition/>
                <RowDefinition Height="21"/>
            </Grid.RowDefinitions>


            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Button Style="{StaticResource HeadPortrait}"
                            Command="{Binding VisibilityICommand_ZhuChengXu}"/>
                    <Label Content="{Binding People1}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"/>
                </Grid>

                <Grid Grid.Row="1">
                    <Button Style="{StaticResource HeadPortrait}"
                            Command="{Binding VisibilityICommand_PeiTao}"/>
                    <Label Content="{Binding People3}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"/>
                </Grid>

                <Grid Grid.Row="2">
                    <Button Style="{StaticResource HeadPortrait}"
                            Command="{Binding VisibilityICommand_WangJiaHao}"/>
                    <Label Content="{Binding People5}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"/>
                </Grid>

                <Grid Grid.Row="3">
                    <Button Style="{StaticResource HeadPortrait}"
                            Command="{Binding VisibilityICommand_Yanxin}"/>
                    <Label Content="{Binding People7}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"/>
                </Grid>

                <Grid Grid.Row="4">
                    <Button Style="{StaticResource HeadPortrait}"
                            Command="{Binding}"/>
                    <Label Content=""
                           HorizontalAlignment="Center"
                           VerticalAlignment="Bottom"/>
                </Grid>
            </Grid>
        </Grid>

        <Border Grid.Column="1"
                    BorderBrush="#707070"
                    BorderThickness="0 0 1 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="99"/>
                    <RowDefinition/>
                    <RowDefinition Height="21"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid>
                        <Button Style="{StaticResource HeadPortrait}"
                                Command="{Binding VisibilityICommand_DongXin}"/>
                        <Label Content="{Binding People2}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"/>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Button Style="{StaticResource HeadPortrait}"
                                Command="{Binding VisibilityICommand_JiangChen}"/>
                        <Label Content="{Binding People4}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"/>
                    </Grid>

                    <Grid Grid.Row="2">
                        <Button Style="{StaticResource HeadPortrait}"
                                Command="{Binding VisibilityICommand_ZhangYuanYuan}"/>
                        <Label Content="{Binding People6}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"/>
                    </Grid>

                    <Grid Grid.Row="3">
                        <Button Style="{StaticResource HeadPortrait}"
                                Command="{Binding}"/>
                        <Label Content=""
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"/>
                    </Grid>

                    <Grid Grid.Row="4">
                        <Button Style="{StaticResource HeadPortrait}"
                                Command="{Binding}"/>
                        <Label Content=""
                               HorizontalAlignment="Center"
                               VerticalAlignment="Bottom"/>
                    </Grid>
                </Grid>
            </Grid>
        </Border>

        <Grid Grid.Column="2">
            <Grid Visibility="{Binding PersonalVisibilityVM_OverView}">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <StackPanel>
                            <Label Content="总项目"
                                   Height="40"
                                   FontFamily="幼圆"
                                   HorizontalContentAlignment="Center"
                                   FontSize="25"
                                   Margin="0 5 0 0"
                                   FontWeight="Bold"/>
                            <uc:PieChart Height="300"
                                         DataContext="{Binding AllProjectsInformation ,UpdateSourceTrigger=PropertyChanged}">
                                <!--<uc:PieChart.DataContext>
                        <vm:AllProjects/>
                    </uc:PieChart.DataContext>-->
                            </uc:PieChart>

                        </StackPanel>
                    </Grid>

                    <Grid Grid.Column="1">
                        <StackPanel>
                            <Label Content="{Binding CurrentYear ,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                   Height="40"
                                   FontFamily="幼圆"
                                   HorizontalContentAlignment="Center"
                                   FontSize="25"
                                   Margin="0 5 0 0"
                                   FontWeight="Bold"/>
                            <uc:PieChart Height="300"
                                         DataContext="{Binding ProjectStage,UpdateSourceTrigger=PropertyChanged}">
                            </uc:PieChart>
                        </StackPanel>
                    </Grid>
                </Grid>

                <Grid Grid.Row="1" >
                    <slc:SeamlessLoopingScroll ItemsSource="{Binding PersonalProjectsList}"/>
                </Grid>
            </Grid>

            <Grid Visibility="{Binding PersonalVisibilityVM_ChengXuZhu}">
                <view:PersonalDataView DataContext="{Binding PersonalDataVM_ChengXuZhu}"/>
            </Grid>

            <Grid Visibility="{Binding PersonalVisibilityVM_DongXin}">
                <view:PersonalDataView DataContext="{Binding PersonalDataVM_DongXin}"/>
            </Grid>

            <Grid Visibility="{Binding PersonalVisibilityVM_PeiTao}">
                <view:PersonalDataView DataContext="{Binding PersonalDataVM_PeiTao}"/>
            </Grid>

            <Grid Visibility="{Binding PersonalVisibilityVM_JiangChen}">
                <view:PersonalDataView DataContext="{Binding PersonalDataVM_JiangChen}"/>
            </Grid>

            <Grid Visibility="{Binding PersonalVisibilityVM_WangJiaHao}">
                <view:PersonalDataView DataContext="{Binding PersonalDataVM_WangJiaHao}"/>
            </Grid>

            <Grid Visibility="{Binding PersonalVisibilityVM_ZhangYuanYuan}">
                <view:PersonalDataView DataContext="{Binding PersonalDataVM_ZhangYuanYuan}"/>
            </Grid>

            <Grid Visibility="{Binding PersonalVisibilityVM_YanXin}">
                <view:PersonalDataView DataContext="{Binding PersonalDataVM_YanXin}"/>
            </Grid>
        </Grid>

        
    </Grid>
</UserControl>
