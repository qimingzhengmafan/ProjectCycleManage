<UserControl x:Class="ProjectManagement.View.TableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectManagement.View"
             xmlns:viewmodel="clr-namespace:ProjectManagement.ViewModel"
             xmlns:slc="clr-namespace:ScrollControlProjectnetcore;assembly=ScrollControlProjectnetcore"
             xmlns:draw="clr-namespace:DrawerTest;assembly=DrawerTest"
             mc:Ignorable="d" 
             d:DesignHeight="700" 
             d:DesignWidth="1252">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="233"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.DataContext>
                <viewmodel:TreeViewModel/>
            </Grid.DataContext>
            <TreeView ItemsSource="{Binding TreeModel1.LevelTwo}">

                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding LevelTwo}">
                        <TextBlock Text="{Binding LevelOne}"/>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>

            </TreeView>
        </Grid>

        <Grid Grid.Column="1">
            <ScrollViewer>
                <draw:DrawerUI>

                </draw:DrawerUI>
            </ScrollViewer>
            
        </Grid>
    </Grid>
</UserControl>
