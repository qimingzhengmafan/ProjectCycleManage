<UserControl x:Class="ProjectManagement.View.TableView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectManagement.View"
             xmlns:viewmodel="clr-namespace:ProjectManagement.ViewModel"
             xmlns:slc="clr-namespace:ScrollControlProjectnetcore;assembly=ScrollControlProjectnetcore"
             xmlns:draw="clr-namespace:DrawerTest;assembly=DrawerTest"
             mc:Ignorable="d" 
             d:DesignHeight="700" 
             d:DesignWidth="1252">
    <UserControl.DataContext>
        <viewmodel:TableVM/>
    </UserControl.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="233"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid>
            <TreeView ItemsSource="{Binding TreeViewModel.TreeModel1.LevelTwo}"
                      FontSize="20"
                      BorderThickness=" 0 0 0.5 0"
                      FontFamily="Microsoft YaHei" 
                      FontWeight="Bold" >
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="Margin" 
                                Value="0,15,0,5"/>
                        <!-- 上下间距2，左右间距0 -->
                    </Style>
                </TreeView.ItemContainerStyle>
                
                
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate ItemsSource="{Binding LevelTwo}">
                        <TextBlock Text="{Binding LevelOne}"/>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>

            </TreeView>
        </Grid>

        <Grid Grid.Column="1">
            <!--<ScrollViewer>
                <draw:DrawerUI>

                </draw:DrawerUI>
            </ScrollViewer>-->
            <ScrollViewer>
                <ScrollViewer.DataContext>
                    <viewmodel:DetailedInformation/>
                </ScrollViewer.DataContext>
                <ItemsControl ItemsSource="{Binding YourDataCollection}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical"/>
                            <!-- 或者 WrapPanel, Grid 等 -->
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <draw:DrawerUI/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            
        </Grid>
    </Grid>
</UserControl>
