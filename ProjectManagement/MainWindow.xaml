<Window x:Class="ProjectManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectManagement"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        xmlns:Menu="clr-namespace:Page_Navigation_App.Utilities"
        xmlns:view="clr-namespace:ProjectManagement.View"
        xmlns:vm="clr-namespace:ProjectManagement.ViewModel"
        x:Name="MainView"
        Title="MainWindow" 
        Height="700" 
        Width="1350">
    <Window.DataContext>
        <!--<vm:MainVM/>-->
        <vm:MainVM/>
    </Window.DataContext>

    <Grid Background="#f5f5f5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Grid>
                <Border>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="91"/>
                            <RowDefinition/>
                            <!--<RowDefinition Height="59"/>
                        <RowDefinition Height="59"/>
                        <RowDefinition Height="59"/>-->
                        </Grid.RowDefinitions>

                        <Border>
                            <Button Style="{StaticResource RoundedButtonStyle}"
                                    Background="Transparent"
                                    BorderThickness="0.5 0.5 0.5 0">
                                <Button.Content>
                                    <Ellipse Height="30"
                                             Width="30">
                                        <Ellipse.Fill>
                                            <RadialGradientBrush>
                                                <GradientStop Color="#FF0123FF" 
                                                          Offset="1"/>
                                                <GradientStop Color="White" 
                                                          Offset="0"/>
                                            </RadialGradientBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Button.Content>
                            </Button>
                        </Border>

                        <Border Grid.Row="1"
                            BorderThickness="0.5 0 0.5 0.5"
                            BorderBrush="#707070"
                            CornerRadius="0 0 5 0">
                            <StackPanel>

                                <Menu:Btn Style="{StaticResource BtnStyle}"
                                      IsChecked="True"
                                      BorderThickness="1"
                                      BorderBrush="Black"
                                      Command="{Binding EngineeringOverViewICommand}">
                                    <Grid>
                                        <Image Source="/Resources/Images/机器人.png" 
                                           Width="25"
                                           Height="25"/>
                                    </Grid>
                                </Menu:Btn>

                                <Menu:Btn Style="{StaticResource BtnStyle}"
                                      BorderThickness="1"
                                      BorderBrush="Black"
                                      Command="{Binding MaintenanceOverViewICommand}">
                                    <Grid>
                                        <Image Source="/Resources/Images/维修.png" 
                                           Width="25"
                                           Height="25"/>
                                    </Grid>
                                </Menu:Btn>

                                <!--<Menu:Btn Style="{StaticResource BtnStyle}"
                                      Command="{Binding ChangeViewICommand}">
                                    <Grid>
                                        <Image Source="/Resources/Images/修改.png" 
                                           Width="25"/>

                                    </Grid>
                                </Menu:Btn>-->

                                <Menu:Btn Style="{StaticResource BtnStyle}"
                                      Command="{Binding AddViewICommand}">
                                    <Grid>
                                        <Image Source="/Resources/Images/新增项目_新增新建操作_jurassic.png"
                                           Width="25"/>

                                    </Grid>
                                </Menu:Btn>

                                <Menu:Btn Style="{StaticResource BtnStyle}"
                                      Command="{Binding TableViewICommand}">
                                    <Grid>
                                        <Image Source="/Resources/Images/表格 (1).png" 
                                           Width="25"/>

                                    </Grid>
                                </Menu:Btn>

                                <Menu:Btn Style="{StaticResource BtnStyle}"
                                          Command="{Binding SettingViewICommand}">
                                    <Grid>
                                        <Image Source="/Resources/Images/设置.png" 
                                               Width="25"/>

                                    </Grid>
                                </Menu:Btn>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>

            <Grid Grid.Column="1" >
                <Grid Visibility="{Binding EngineeringOverViewVisibility}">
                    <view:Overview DataContext="{Binding EngineeringOverviewVMInfor}"/>
                </Grid>

                <Grid Visibility="{Binding MaintenanceOverViewVisibility}">
                    <view:Overview DataContext="{Binding MaintenanceOverviewvmVMInfor}"/>
                </Grid>

                <Grid Visibility="{Binding AddViewVisibility}">
                    <view:AddView/>
                </Grid>

                <Grid Visibility="{Binding TableViewVisibility}">
                    <view:TableView/>
                </Grid>

                <Grid Visibility="{Binding SettingViewVisibility}">
                    <view:SettingView/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
